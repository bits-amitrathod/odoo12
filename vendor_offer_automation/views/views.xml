<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vendor_template_client_action" model="ir.actions.client">
            <field name="name">Customer Import Template</field>
            <field name="type">ir.actions.client</field>
            <field name="tag">import_offer_template</field>
            <field name="params">[{'model': 'sps.vendor_offer_automation.template', 'user_type': 'supplier'}]
            </field>
        </record>

          <record model="ir.ui.view" id="purchase_order_line_file_field_vendor_import">
            <field name="name">Vendor Offer File Field</field>
            <field name="model">purchase.order</field>
            <field eval="40" name="priority"/>
            <field name="inherit_id" ref="vendor_offer.view_vendor_offer_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='action_send_offer_email']" position="after">
                    <button name="action_import_order_lines" string="Import" type="object"  class="btn-primary"  />
                    <button name="action_import_order_lines_all_column" string="Manual Import" type="object"  class="btn-primary" attrs="{'invisible':[('state', 'in', ('purchase','cancel'))]}" />
                    <button name="action_import_order_lines_app_new" string="Appraisal Import New" type="object"  class="btn-primary" attrs="{'invisible':[('state', 'in', ('purchase','cancel'))]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
