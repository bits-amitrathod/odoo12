    <record id="product_form_monitor_ex" model="ir.ui.view">
        <field name="name">product.product.form_monitor_ex</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_account_purchase_ok_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@name='options']" position="inside">
                 <span class="d-inline-block">
                    <field name="inventory_monitor"/>
                    <label for="inventory_monitor"/>
                </span>
             </xpath>
        </field>
    </record>


    <record id="view_inventory_moniter_line_tree_test" model="ir.ui.view">
        <field name="name">inventory.monitor.tree</field>
        <field name="model">inventory.monitor</field>
        <!--<field name="context">{"inventory_monitor":1}</field>-->
        <field name="arch" type="xml">
            <tree string="Inventory Monitor" create="false" edit="false" delete="false">
                <field name="sku_code" />
                <field name="product_id" />
                <field name="max_inventory_level" />
                <field name="inventory_percent_color" invisible="1" />
                <field name="max_inventory_percent" options='{"bg_color": "#e86a61:inventory_percent_color&lt;=75;#f7fa4b:inventory_percent_color&gt;75 and inventory_percent_color&lt;125 ;#c9f3c9:inventory_percent_color&gt;125"}' widget="percentage"/>
                <field name="qty_in_stock"/>
                <field name="future_percent_color" invisible="1"/>
                <field name="max_inventory_future_percent"  options='{"bg_color": "#e86a61:future_percent_color&lt;=75;#f7fa4b:future_percent_color&gt;75 and inventory_percent_color&lt;125 ;#c9f3c9:future_percent_color&gt;125"}' widget="percentage"/>
                <field name="qty_on_order"/>
                <field name="inventory_monitor" invisible="1" eval="True"/>
                <field name="type" />

            </tree>
        </field>
    </record>


    <record id="view_inventory_moniter_line_form_test" model="ir.ui.view">
        <field name="name">inventory.monitor.tree</field>
        <field name="model">inventory.monitor</field>
        <!--<field name="context">{"inventory_monitor":1}</field>-->
        <field name="arch" type="xml">
            <form string="Inventory Monitor" create="false" edit="false" delete="false">
               <sheet>
                   <group>
                       <field name="sku_code" />
                       <field name="product_id" />
                       <field name="max_inventory_level" />
                       <label for="max_inventory_percent"/>
                       <div>
                            <field name="max_inventory_percent" options='{"bg_color": "#c9f3c9:inventory_percent_color&lt;=75;#f3b8b4:inventory_percent_color&lt;45;#f5e5b8:inventory_percent_color&gt;=125"}'/>
                            <span>%</span>
                       </div>
                   </group>
                   <group>
                       <field name="qty_in_stock"/>
                       <label for="max_inventory_future_percent"/>
                       <div>
                            <field name="max_inventory_future_percent" options='{"bg_color": "#c9f3c9:future_percent_color&lt;=75;#f3b8b4:future_percent_color&lt;45;#f5e5b8:future_percent_color&gt;=125"}'/>
                            <span>%</span>
                       </div>
                       <field name="qty_on_order"/>
                       <field name="type" />
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_view_procurement_button1">
        <field name="name">product.template_max_inventory_level_duration</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='operations']" position="inside">
                    <label for="max_inventory_product_level_duration" attrs="{'invisible': [('inventory_monitor', '=', False)]}"/>
                    <div attrs="{'invisible': [('inventory_monitor', '=', False)]}">
                        <field name="max_inventory_product_level_duration" class="oe_inline"   />
                        <span> days</span>
                    </div>
                </xpath>
            </data>
        </field>
    </record>

