 <record id="max_inventory_level_duration_popup" model="ir.ui.view">
        <field name="name">Max Inventory Level Duration</field>
        <field name="model">max.inventory.popup</field>
         <field name="priority">50</field>
        <field name="arch" type="xml">
             <form>
                 <sheet>
                     <div>
                         <span> <b>Max Inventory Level Duration &amp;nbsp;&amp;nbsp; </b> </span>
                         <field  name="max_inventory_level_duration" class="oe_inline"   />
                         <span> Days</span>
                          <p style="color: #1aaa58;" > * Duration of max inventory level should be less than 365 days</p>
                    </div>
                </sheet>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
             </form>
        </field>
    </record>


    <record id="max_inventory_level_duration" model="ir.actions.act_window">
        <field name="name"> Max Inventory Level Duration </field>
        <field name="res_model">max.inventory.popup</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="max_inventory_level_duration_popup"/>
        <field name="target">new</field>
    </record>

