<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate = "1">
            <record id="ir_cron_scheduler_notification_action" forcecreate="True" model="ir.cron">
            <field name="name">Notification Scheduler</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="model_id" ref="model_inventory_notification_scheduler"/>
            <field name="state">code</field>
            <field name="code">model.process_notification_scheduler(limit=40)</field>
            <field name="numbercall">-1</field>
            <field name="priority">0</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
        <record id="ir_cron_scheduler_todays_notification_flag_action" forcecreate="True" model="ir.cron">
            <field name="name">Notification Scheduler Everyday</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="model_id" ref="model_inventory_notification_scheduler"/>
            <field name="state">code</field>
            <field name="code">model.process_notification_scheduler_everyday(custom_date=None)</field>
            <field name="numbercall">-1</field>
            <field name="priority">0</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
    </data>

