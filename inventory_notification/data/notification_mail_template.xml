<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_packing_list_notification" model="mail.template">
        <field name="name">Inventory Notification: Packing List Email</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="email_from">{{ ctx['email_from'] }}</field>
        <field name="email_to">{{ ctx['email_to'] }}</field>
        <field name="subject">{{ ctx['subject'] }}</field>
        <field name="body_html" type="html">
            <t t-set="picking_list" t-value="{{ ctx.get('picking_list', []) }}"/>
            <t t-set="row_color" t-value="#f0f8ff"/>
            <t t-set="datetime" t-value="{{ ctx.get('datetime', []) }}"/>
            <t t-set="int" t-value="ctx.get('int', []) "/>
            <div style="margin:auto;width:100%;background-color:  #ffffff;  padding-left: 60px;">
                <div>
                    <p>Hi Shipping Team,</p>
                    <p>Please find below Packing list:  </p>
                </div>
                <t t-foreach="picking_list" t-as="packing">
                    <div>
                        <div style="margin-left:10px;">
                            <p><span style="font-weight: bold;">Order Number: </span><span><t t-esc="packing.sale_id.name"/></span></p>
                            <t t-set="date_on" t-value="datetime.strptime(packing.sale_id.write_date, '%Y-%m-%d %H:%M:%S').strftime('%m/%d/%Y')"/>
                             <p><span style="font-weight: bold;">Dated On: </span><t t-esc="date_on"/></p>
                            <p><span style="font-weight: bold;">Customer Name: </span><t t-esc="packing.sale_id.partner_id.display_name"/></p>
                            <p>
                                <span style="font-weight: bold;">Shipping Address: </span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.street or ''}}"/></span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.street2 or ''}}"/></span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.city or ''}}"/></span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.state_id.name or ''}}"/></span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.zip or ''}}"/></span>
                                <span><t t-esc="{{ packing.sale_id.partner_shipping_id.country_id.name or ''}}"/></span>
                            </p>
                            <t t-if="packing.sale_id.client_order_ref != False">
                                <p><span style="font-weight: bold;">Customer PO Number: </span> <t t-esc="packing.sale_id.client_order_ref"/> </p>
                            </t>
                            <t t-if="packing.sale_id.carrier_info != False">
                                <p><span style="font-weight: bold;">Carrier Name: </span><t t-esc="packing.sale_id.carrier_info"/> </p>
                            </t>
                            <t t-if="packing.sale_id.carrier_acc_no != False">
                                <p><span style="font-weight: bold;">Carrier Account #: </span> <t t-esc="packing.sale_id.carrier_acc_no "/> </p>
                            </t>
                            <t t-if="packing.sale_id.carrier_id and packing.sale_id.carrier_id.name !=False">
                                <p><span style="font-weight: bold;">Delivery Method #:  </span><t t-esc="packing.sale_id.carrier_id.name "/></p>
                            </t>
                        </div>
                        <br/>
                        <table style="border: 1px solid #efecec;width:100%">
                            <thead style='border: 1px solid black;background-color:#D6DBDF;line-height: 30px'>
                                <tr style="border: 1px solid black;">
                                     <th style="text-align: center;">Catalog #</th>
                                     <th style="text-align: center;">Description</th>
                                     <th style="text-align: center;">Unit of Measure</th>
                                     <th style="text-align: center;">Lot#</th>
                                     <th style="text-align: center;">Ordered Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="packing.move_lines" t-as="move_line">
                                    <t t-if="row_color == '#f0f8ff'">
                                        <t t-set="row_color" t-value="#ffffff"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="row_color" t-value="#f0f8ff"/>
                                    </t>
                                    <tr t-attf-style='border: 1px solid black;line-height:25px;background-color:{{ row_color }}'>
                                        <td><t t-esc="{{move_line.product_tmpl_id.sku_code}}"/></td>
                                        <td><t t-esc="{{move_line.product_tmpl_id.name}}"/></td>
                                        <td><t t-esc="{{ move_line.product_uom.name }}"/></td>
                                        <td>
                                            <div style="margin-top:10px">
                                                <t t-foreach="move_line.move_line_ids" t-as="move_line_id">
                                                    <p style="font-weight: lighter">
                                                        <span><t t-esc="move_line_id.qty_done or 0"/></span>
                                                        <span> <t t-esc="move_line_id.product_uom.name"/></span>-
                                                        Lot#:<span><t t-esc="move_line_id.lot_id.name"/></span>
                                                        <t t-if="move_line_id.lot_id.use_date">
                                                             <t t-set="use_date" t-value="datetime.strptime(move_line_id.lot_id.use_date, '%Y-%m-%d %H:%M:%S').strftime('%m/%d/%Y')"/>
                                                        </t>
                                                        <t t-else="">
                                                             <t t-set="use_date" t-value="NA"/>
                                                        </t>
                                                        Exp Date:<span> <t t-esc="{{ use_date }}"/></span>
                                                    </p>
                                                </t>
                                            </div>
                                        </td>
                                        <td>
                                            <div style="margin-top:10px">
                                                <p style="font-weight: lighter">
                                                    <span> <t t-esc="{{ move_line.ordered_qty or 0 }}"/></span>
                                                    <span> <t t-esc="{{ move_line.product_uom.name }}"/></span>
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
                <div  style="margin-top:20px">
                    <p>Thanks &amp; Regards,</p>
                    <p> Sales Team </p>
                </div>
            </div>
        </field>
    </record>
    <record id="common_mail_template" model="mail.template">
        <field name="name">Inventory Notification: Common Product Availability Email</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="email_from">{{ ctx['email_from'] }}</field>
        <field name="email_to">{{ ctx['email_to'] }}</field>
        <field name="subject">{{ ctx['subject'] }}</field>
        <field name="body_html" type="html">
            <t t-set="products" t-value="ctx.get('products', [])"/>
            <t t-set="headers" t-value="ctx.get('headers', [])"/>
            <t t-set="columnProps" t-value="ctx.get('columnProps', [])"/>

            <div style="margin:auto;width:100%;background-color:  #ffffff;  padding-left: 60px;">
                <div>
                    <div>
                        <p> <t t-esc="ctx['description']" /> </p>
                    </div>
                    <center>
                    </center>
                    </div>
                <br/>
                <div>
                    <table style="border: 1px solid #efecec;width:100%">
                        <thead style='border: 1px solid black;background-color:#D6DBDF;line-height: 30px'>
                            <tr style="border: 1px solid black;">
                             <t t-foreach="headers" t-as="header">
                                 <th style="text-align: center;"><t t-esc="header"/></th>
                             </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products" t-as="product">
                                <tr  style='border: 1px solid black;background-color: {{ product.get("background_color") }};line-height:25px'>
                                    <t t-foreach="columnProps" t-as="column">
                                         <td style="text-align: center;">
                                            <span t-if="product[column] != 'False'">
                                                <t t-esc="product[column]"/>
                                             </span>
                                        </td>
                                    </t>
                                 </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div  style="margin-top:20px">
                    <p>Thanks &amp; Regards,</p>
                    <p><t t-esc="ctx['closing_content']"/></p>
                </div>
             </div>
        </field>
    </record>

