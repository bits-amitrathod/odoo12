<odoo>

	<template id="blog_post_complete_inherit" inherit_id="website_blog.blog_post_complete">
<!--		<xpath expr="//section[@id='o_wblog_post_top']" position="replace"/>-->
		<xpath expr="//section[@id='o_wblog_post_main']" position="replace">
			<section id="o_wblog_post_main" t-attf-class=" pt-4 pb-5 #{'anim' in request.params and 'o_wblog_post_main_transition'}">
				<!-- Sidebar-enabled Layout -->
				<div t-if="opt_blog_post_sidebar" t-attf-class="mx-auto container #{opt_blog_post_readable and 'o_wblog_read_with_sidebar'}">
					<div t-attf-class="d-flex flex-column flex-lg-row #{opt_blog_post_readable and 'justify-content-between'}">
						<div id="o_wblog_post_content" t-attf-class="#{opt_blog_post_readable and 'mx-0 w-100 flex-shrink-0' or 'w-lg-75'}">
							<t t-call="website_blog.blog_post_content"/>
						</div>
						<div id="o_wblog_post_sidebar_col" t-attf-class="ps-lg-5 #{not opt_blog_post_readable and 'flex-grow-1 w-lg-25'}">
							<t t-call="website_blog.blog_post_sidebar"/>
						</div>
					</div>
				</div>
				<!-- No-Sidebar Layout -->
				<div t-if="not opt_blog_post_sidebar" t-attf-class="#{opt_blog_post_readable and 'container'}">
					<div class="d-flex flex-column flex-lg-row">
						<div id="o_wblog_post_content" t-attf-class=" #{opt_blog_post_readable and 'container w-100 flex-shrink-0'}">
							<t t-call="website_blog.blog_post_content"/>
						</div>
					</div>
				</div>
			</section>
		</xpath>
	</template>

	<template id="blog_post_content" inherit_id="website_blog.blog_post_content" >
		<xpath expr="//div" position="replace">
			<div id="blog_content_pop"  class="blog_content mt32">
				<section class="blog pt-3 pb-5">
					<div class="container">
						<div class="row">
							<div class="col-md-8">
								<div id="blog_content" class="blog_content">
									<div t-field="blog_post.title_img" class=" banner-wrapper py-3 section-description mt-4"/>
									<div class="text-left py-3">
										<h1 class="about-header ft-32" t-field="blog_post.name" id="blog_post_name" t-att-data-blog-id="blog_post.id" placeholder="Blog Post Title"/>
									</div>
									<div class="blog-detail">
										<div class="">
											<div class="profile-img-wrapper align-self-center">
												<div class="profile-img d-flex justify-content-center">
													<img t-attf-src="/web/image/res.partner/#{author_info.id}/image" class="img-fluid"/>
												</div>
											</div>
											<div class="user-info section-description">
												<p class="lh-25">
													<span class="medium-font">
														<t t-esc="author_info.sudo().name"/>
													</span>
													<span class="post-meta text-muted text-center regular-font" t-if="len(blog_post.tag_ids)">
                                                        in
														<i class="fa fa-tags ml-2" role="img" aria-label="Tags" title="Tags"/>
														<t t-foreach="blog_post.tag_ids" t-as="one_tag">
															<a class="badge badge-primary mr8" t-attf-href="#{blog_url(tag=slug(one_tag))}" t-esc="one_tag.name"/>
														</t>
													</span>
												</p>
												<span >
													<t t-esc="blog_post.visits"/>
													<span>Views</span>
												</span>
											</div>
										</div>
									</div>
									<div t-field="blog_post.content" class="section-description mt-4"/>
                                </div>
							</div>
							<div class="col-md-4">
								<t t-call="blog_cstm.blog_post_complete"/>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>
	<template id="blog_post_complete">
		<div class="popular-post">
			<h3 class="side-title">Popular Posts</h3>
		</div>
		<t t-set="count" t-value='1'/>
		<t t-foreach="popular_post" t-as="post">
			<div class="section-description">
				<div class="story-list d-flex">
					<div class="bulleted-list mr8">
						<span>
							<t t-esc="count" />
						</span>
						<t t-set="count" t-value="count+1"/>
					</div>
					<div class="list-description">
						<p class="mb-0 lh-25">
							<a t-att-href="post.website_url">
								<span class="medium-font">
									<t t-esc="post.sudo().display_name"/>
								</span>
							</a>
						</p>
						<div class="user-info">
							<p class="f14  ">
								<span class="medium-font">
									<t t-esc="post.author_id.sudo().name"/>
								</span>
								<span class="post-meta text-muted text-center regular-font" t-if="len(post.tag_ids)">
                                    in
									<i class="fa fa-tags ml-2" role="img" aria-label="Tags" title="Tags"/>
									<t t-foreach="post.tag_ids" t-as="one_tag">
										<a class="badge badge-primary mr8" t-attf-href="#{blog_url(tag=slug(one_tag))}" t-esc="one_tag.name"/>
									</t>
								</span>
								<br/>
								<span class="regular-font" ><t t-esc="post.visits"/></span>
								Views
							</p>
						</div>
					</div>
				</div>
			</div>
		</t>
		<div class="see-all">
			<a class="btn btn-link" href="/resource">
                                               SEE ALL POPULAR

				<i class="fa fa-angle-right"></i>
			</a>
		</div>
	</template>


</odoo>
