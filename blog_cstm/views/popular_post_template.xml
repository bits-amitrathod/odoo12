	<template id="blog_post_complete">
		<div class="popular-post">
			<h3 class="side-title">Popular Posts</h3>
		</div>
		<t t-set="count" t-value='1'/>
		<t t-foreach="popular_post" t-as="post">
			<div class="section-description">
				<div class="story-list">
					<div class="bulleted-list">
						<span>
							<t t-esc="count" />
						</span>
						<t t-set="count" t-value="count+1"/>
					</div>
					<div class="list-description">
						<p class="mb-2 lh-25">
							<a t-att-href="post.website_url">
								<span class="medium-font">
									<t t-esc="post.sudo().display_name"/>
								</span>
							</a>
						</p>
						<div class="user-info">
							<p class="f14 mb-0 ">
								<span class="medium-font"><t t-esc="post.author_id.sudo().name"/> </span>
                                <span class="post-meta text-muted text-center regular-font" t-if="len(blog_post.tag_ids)">
                                    in<i class="fa fa-tags ml-2" role="img" aria-label="Tags" title="Tags"/>
                                    <t t-foreach="blog_post.tag_ids" t-as="one_tag">
                                        <a class="badge badge-primary mr8" t-attf-href="#{blog_url(tag=slug(one_tag))}" t-esc="one_tag.name"/>
                                    </t>
                                </span>
                                <span class="regular-font" t-field="post.post_date" t-options='{"format": "MMM d, yyyy"}'/>
                                <span class="regular-font" >• <t t-esc="post.visits"/></span> Views
                               </p>

							<!--                                                   <p  class="f14 mb-0">Jun 14 • 3 min read</p>-->
						</div>
					</div>
				</div>
				<!--                                       <div class="see-all">-->
