				<!--                                               SEE ALL POPULAR  <i class="fa fa-angle-right"></i>-->
				<!--                                            </a>-->
				<!--                                        </div>-->
			</div>
		</t>
		<div class="see-all">
                                            <a class="btn btn-link" href="/blog">
                                               SEE ALL POPULAR  <i class="fa fa-angle-right"></i>
                                            </a>
                                        </div>
	</template>

    <template id="blog_post_list" name="Post list UI update" inherit_id="website_blog.latest_blogs">


        <xpath expr="//div[@id='wrap']" position="replace">
            <div class="oe_structure" id="oe_structure_website_blog_latest_blogs_1"/>
            <section class="resource-page video-block padding-60-y">
                <div class="alert alert-warning alert-dismissable mt16" groups="website.group_website_publisher" role="status">
                   <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                   <p>
                   This page is great to improve your <strong>Search Engine Optimization</strong>;
                   You can review titles, keywords and descriptions of all blogs at once.
                   </p><p>
                   You should <strong>add a banner on the top</strong> as it is a frequent landing page for new visitors.
                   <span class="text-muted">This box will not be visible to your visitors.</span>
                   </p>
                </div>

                            <div class="container">
                                 <div class="text-center">
                                     <h1  class="resource-section-title"> <span>Latest</span> Posts</h1>
                                     <div class="pad-bot">
                    <t t-call="website.pager" >
                        <t t-set="classname">float-right</t>
                    </t>
                </div>
                                 </div>
                                <div class="row mt-5">

                                        <t t-foreach="posts" t-as="post">
                                            <div class="col-md-4 mb-3 px-3 px-md-4">
                                                <div class="resource-box h-100">
                                             <div class="images-wrapper m-0 border-0 no-shadow">
                                                  <img t-attf-src="/web/image/blog.post/#{post.id}/image" class="img-fluid img-thumbnail oe_slides_grid_thumbnail"/>
                                            </div>
                                            <div class="resource-detail p-3">
                                                <div class="section-description">
                                                    <p class="mb-0"><span><t t-esc="post.name"/></span></p>
                                                    <p class="mb-0"><t t-esc="post.subtitle"/></p>
                                                </div>
                                                 <div class="link-wrapper mb-3 mt-2">
                                                   <a t-att-href="post.website_url"  class="link-btn">READ MORE ></a>
                                                 </div>
                                            </div>
                                        </div>
                                            </div>

                            </t>

                                </div>
                            </div>
                         </section>
            <div class="oe_structure" id="oe_structure_website_blog_latest_blogs_2"/>
           </xpath>

