        <record id="email_template_edi_vendor_offer_done" model="mail.template">
            <field name="name">Vendor Offer - Send by Email</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="email_from">${object.sudo().create_uid.email_formatted | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
             <field name="body_html"><![CDATA[
                % set access_url = object.get_mail_url() or ''

                <p>Dear ${object.partner_id.name}
                % if object.partner_id.parent_id:
                    (<i>${object.partner_id.parent_id.name}</i>)
                % endif
                ,</p>
                <p>
                Please find in attachment a <strong>${object.state in ('draft', 'sent') and 'request for vendor draft' or 'vendor offer confirmation'} ${object.name}</strong>
                % if object.partner_ref:
                    with reference: ${object.partner_ref}
                % endif
                % if object.origin:
                    (RFQ origin: ${object.origin})
                % endif

                % if object.offer_type=='credit':
                    amounting <strong>${format_amount(object.credit_amount_total, object.currency_id)}</strong>
                % elif object.partner_ref=='cash':
                    amounting <strong>${format_amount(object.cash_amount_total, object.currency_id)}</strong>
                % else :
                    amounting <strong>${format_amount(object.cash_amount_total, object.currency_id)}</strong>
                % endif

                from ${object.company_id.name}.
                </p>
                <br/><br/>
                <center>
                    <a href="${access_url}" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">View Offer</a>
                    <br/><br/><br/>
                    <span style="color:#888888">(or view attached PDF)</span>
                </center>
                <p>You can reply to this email if you have any questions.</p>
                <p>Thank you,</p>
                ]]>
            </field>
            <field name="report_template" ref="action_report_vendor_offer"/>
            <field name="report_name">OFFER_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

