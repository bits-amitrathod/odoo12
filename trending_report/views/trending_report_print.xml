<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="trending_report_print">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4>Trending Report</h4>
                        </b>
                    </center>
                    <center>
                    </center>
                    </div>
                    <br/>
                    <div >
                    <table class="table  table-condensed" style="border: 1px solid black;width:100%">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align: center;">Manufacturer</th>
                                    <th style="border: 1px solid black;text-align: center;">SKU / Catalog No</th>
                                    <th style="border: 1px solid black;text-align: center;">Product Code</th>
                                    <th style="border: 1px solid black;text-align: center;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;">Qty In Stock</th>
                                    <th style="border: 1px solid black;text-align: center;">Price Per Unit</th>
                                    <th style="border: 1px solid black;text-align: center;">Min. Expiration Date</th>
                                    <th style="border: 1px solid black;text-align: center;">Max. Expiration Date</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data" t-as="order">
                                         <td style="border: 1px solid black;">
                                            <span t-esc="order.manufacturer"/>
                                        </td>

                                        <td style="border: 1px solid black;">
                                            <span t-esc="order.sku_reference"/>
                                        </td>

                                        <td style="border: 1px solid black;">
                                            <span t-esc="order.product_code"/>
                                        </td>

                                        <td style="border: 1px solid black;">
                                            <span t-esc="order.product_name"/>
                                        </td>
                                        <td align="center" style="border: 1px solid black;">
                                            <span t-esc="order.qty_in_stock"/>
                                        </td>

                                        <td align="right" style="border: 1px solid black;white-space:nowrap;">
                                              <span t-esc="order.product_price" t-options='{"widget": "monetary", "display_currency": order.currency_id}' />
                                        </td>
                                        <td align="right" style="border: 1px solid black;white-space:nowrap;">
                                              <span t-esc="order.minExDate" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;white-space:nowrap;">
                                              <span t-esc="order.maxExDate" t-options='{"widget": "date"}'/>
                                        </td>

                                    </tr>
                                </tbody>
                    </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>
