<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_supplier_form_partner_name" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"></field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <xpath expr="//group/group/field[@name='partner_id']" position="replace">
                  <field name="partner_id" widget="res_partner_many2one" nolabel="1"
                         context="{'default_customer': 0,
                         'search_default_supplier': 1,
                         'default_supplier': 1,
                         'default_company_type': 'company',
                         'vendor_bill_partner_name_display_name': True,
                         'show_vat': True,
                         'default_is_company': True,
                         'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False,
                         'show_address': 1
                         }"
                                       options='{"always_reload": True, "no_quick_create": True}'
                                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>

                </xpath>
                <field name="invoice_date_due" position="after">
                    <field name='due_date_note' attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"></field>
                </field>
                <field name="discount" position="replace">
                    <field name="discount" string="Disc.%"/>
                </field>
            </field>
        </record>
        <record id="invoice_payment_form_partner_name" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_type']" position="after">
                     <field name="partner_type" widget="selection" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('is_internal_transfer', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="destination_account_id" options="{'no_create': True}" required="1" attrs="{'readonly': ['|', ('state', '!=', 'draft'), ('is_internal_transfer', '=', True)]}"/>
                      <field name="company_id" groups="base.group_multi_company"/>
                </xpath>

                <xpath expr="//group/group/field[@name='partner_id']" position="replace">
                    <field name="partner_id" attrs="{'required': [('state', '=', 'draft'), ('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', '!=', 'draft')]}"
                           context="{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound','vendor_payment_partner_name_display_name': True}"/>
                </xpath>
                 <xpath expr="//field[@name='payment_method_line_id']" position="after">
                     <field name="move_id" required="0" attrs="{'invisible': [('id', '=', False)]}" groups="account.group_account_readonly"/>
                </xpath>
            </field>
        </record>

        <record id="vendor_bill_cart_image_23" model="ir.ui.view">
            <field name="name">Cart_image_update</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_kanban_image']" position="replace">
                    <div class="o_kanban_image">
                        <img alt="Contact image" t-if="record.image_128.raw_value" t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)"/>
                        <t t-if="!record.image_128.raw_value">
                            <img alt="Delivery" t-if="record.type.raw_value === 'delivery'" t-att-src='"/vendor_bill_partner_name/static/src/img/truck.png"'/>
                            <img alt="Invoice" t-if="record.type.raw_value === 'invoice'" t-att-src='"/vendor_bill_partner_name/static/src/img/money.png"'/>
                            <img alt="AP Address" t-if="record.type.raw_value === 'other'" t-att-src='"/vendor_bill_partner_name/static/src/img/cart.png"'/>
                            <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery' &amp;&amp; record.type.raw_value !== 'other'">
                                <img alt="Logo" t-if="record.is_company.raw_value === true" t-att-src='"/base/static/img/company_image.png"'/>
                                <img alt="Avatar" t-if="record.is_company.raw_value === false" t-att-src='"/vendor_bill_partner_name/static/src/img/avatar.png"'/>
                            </t>
                        </t>
                    </div>
                </xpath>
            </field>
        </record>
        <!-- kanban View images changes related -->
        <record id="vendor_bill_cart_image_list" model="ir.ui.view">
            <field name="name">Cart_image_update_list</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban']" position="replace">
                    <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                        <t t-if="record.type.raw_value === 'delivery'">
                            <img alt="Delivery" t-att-src='"/vendor_bill_partner_name/static/src/img/truck.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                        </t>
                        <t t-if="record.type.raw_value === 'invoice'">
                            <img alt="Invoice" t-att-src='"/vendor_bill_partner_name/static/src/img/money.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                        </t>
                        <t t-if="record.type.raw_value === 'other'">
                            <img alt="Cart" t-att-src='"/vendor_bill_partner_name/static/src/img/cart.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                        </t>
                        <t t-if="record.type.raw_value != 'invoice' &amp;&amp; record.type.raw_value != 'delivery' &amp;&amp; record.type.raw_value != 'other' ">
                            <t t-if="record.is_company.raw_value === true">
                                <img class="o_kanban_image" alt="Logo" t-att-src='"/base/static/img/company_image.png"'/>
                            </t>
                            <t t-if="record.is_company.raw_value === false">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='"/vendor_bill_partner_name/static/src/img/avatar.png"'/>
                            </t>
                        </t>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                            <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                            <ul>
                                <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                                <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                                <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                                <li t-if="record.city.raw_value and !record.country_id.raw_value"><field name="city"/></li>
                                <li t-if="!record.city.raw_value and record.country_id.raw_value"><field name="country_id"/></li>
                                <li t-if="record.city.raw_value and !record.state_id.raw_value and record.country_id.raw_value"><field name="city"/>, <field name="country_id"/></li>
                                <li t-if="record.city.raw_value and record.state_id.raw_value and record.country_id.raw_value"><field name="city"/>, <field name="state_id"/>, <field name="country_id"/></li>
                                <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                            </ul>
                            <div class="oe_kanban_partner_links"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
               <field name="street" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
               </field>

                <field name="city" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
                </field>

                <field name="state_id" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
                </field>

                <field name="zip" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
                </field>

                <field name="phone" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
                </field>

                 <field name="country_id" position="attributes">
                    <attribute name="attrs">{'required': [('is_company', '=', True)]}</attribute>
                </field>
            </field>
        </record>

        <record id="view_res_partner_kanban_sorted" model="ir.ui.view">
            <field name="name">res.partner.kanban.sorted</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="default_order">display_name asc</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_res_partner_tree_sorted" model="ir.ui.view">
            <field name="name">res.partner.tree.sorted</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">display_name asc</attribute>
                </xpath>
            </field>
        </record>

        <template id="report_invoice_document_inherited_for_due_dates" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='page']/div[@id='informations']/div[@name='due_date']" position="after">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.due_date_note and o.move_type in ('in_invoice', 'in_refund', 'in_receipt')" name="due_dates">
                    <strong>Due Dates:</strong>
                    <p t-field="o.due_date_note"/>
                </div>
            </xpath>
        </template>

        <record id="account_followup.action_view_list_customer_statements" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_in_need_of_action': 1, 'search_default_customer': 1, 'res_partner_search_mode': 'customer'}</field>
        </record>
    </data>
</odoo>
