<odoo>

      <template id="aged_receivable_scrollbar" inherit_id="account_reports.main_template">
          <xpath expr="//div[hasclass('table-responsive')]" position="replace">
               <div>
                      <table class="o_account_reports_table report_financial_table">
                          <t t-call="{{report.main_table_header_template}}"/>
                          <tbody>
                              <t t-if="lines">
                                  <t t-call="{{report.line_template}}"/>
                              </t>
                          </tbody>
                      </table>
                  </div>
          </xpath>
      </template>

</odoo>