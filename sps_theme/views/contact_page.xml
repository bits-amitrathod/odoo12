<odoo>
	<template id="contact_page_template" name="Contact Form" inherit_id="website.contactus" customize_show="True">
		<xpath expr="//div[@id='wrap']" position="replace">
			<div id="wrap" class="oe_structure oe_empty">
				<section class="contact-us-section  mb0">
					<div class="container">
						<div class="text-center pt32 pb32">
							<h1  class="about-header"> Contact
								<strong>Us</strong>
							</h1>
						</div>
						<div class="row">
							<div class="col-xl-5 col-md-6 col-sm-6 mb48 mt8">
								<div class="contact-info">
									<h3 class="contact-title">CONTACT OUR TEAM</h3>
									<div class="section-description mt-5">
										<div class="story-list link">
											<div class="bulleted-list">
												<div>
													<i class="fa fa-plus"></i>
												</div>
											</div>
											<div class="list-description">
												<p>Sales</p>
												<div class="contact-detail">
													<span>(412) 564-1280</span>
												</div>
											</div>
										</div>
										<div class="story-list link">
											<div class="bulleted-list">
												<div>
													<i class="fa fa-plus"></i>
												</div>
											</div>
											<div class="list-description">
												<p>Acquisitions</p>
												<div class="contact-detail">
													<span>(412) 745-0330</span>
												</div>
											</div>
										</div>
										<div class="story-list link">
											<div class="bulleted-list">
												<div>
													<i class="fa fa-plus"></i>
												</div>
											</div>
											<div class="list-description">
												<p>Contracts &amp; National Accounts</p>
												<div class="contact-detail">
													<span>(412) 564-1047</span>
												</div>
											</div>
										</div>
										<div class="story-list link">
											<div class="bulleted-list">
												<div>
													<i class="fa fa-plus"></i>
												</div>
											</div>
											<div class="list-description">
												<p>Accounting</p>
												<div class="contact-detail">
													<span>(412) 745-2322</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-xl-7 col-md-6 col-sm-6 mb48 mt8">
								<div class="get-in-touch">
									<h3 class="title">GET IN TOUCH</h3>
									<span class="sub-title">Use the form below to get in touch with us and weâ€™ll respond as soon as possible. </span>
									<form action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/thank-you" class="mt-5 s_website_form form-horizontal container-fluid" enctype="multipart/form-data" data-editable-form="false">
										<div class="col-md-8">

											<div class="form-group has-float-label form-field o_website_form_required_custom">
												<input type="text" class="form-control o_website_form_input" placeholder="Name" id="contact_name" name="contact_name" t-att-value="request.params.get('contact_name', '')" required=""/>
												<label class="control-label" for="contact_name">Name</label>
											</div>
										</div>
										<div class="col-md-8">
											<div class="form-group has-float-label form-field o_website_form_required_custom">
												<input placeholder="Email"  type="text" id="email_form" class="form-control o_website_form_input" name="email_from" required="" t-att-value="request.params.get('email_from', '')"/>
												<label class="control-label" for="email_form">Email</label>
												<input type="hidden" class="form-control o_website_form_input" name="name" required="True" value="Website Contact Us" />
											</div>
										</div>
										<div class="col-12">
											<div class="form-group has-float-label form-field o_website_form_required_custom o_website_form_required_custom">
                                                <textarea id="description" placeholder="Message" class="form-control o_website_form_input" name="description"  required="" rows="5"><t t-esc="request.params.get('description', '')" /></textarea>
                                                <label class="control-label" for="description">Message</label>
                                          </div>
										</div>
										<div class="col-md-12 text-center btn-wrapper">
									        <button class="btn btn-info btn-sm action_button o_website_form_send">Send Message</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section class="map-section padding-100-y">
					<div class="container">
						<div class="row contact-form">
							<div class="col-md-8 px-3 px-md-5">
								<div class="mb-3">
									<iframe width="100%" height="500" frameborder="0" scrolling="no" marginheight="0"
                                                marginwidth="0"
                                                src="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=643+First+Avenue+Pittsburgh,+PA+15219&amp;z=12&amp;output=embed"/>
								</div>
							</div>
							<div class="col-md-4 align-self-center">
								<div class="address-section">
									<img src="/sps_theme/static/src/images/logo.png" class="img-fluid"/>
									<p class="company-name">SURGICAL PRODUCT SOLUTIONS</p>
									<p class="address">
                                                901 Pennsylvania Ave
										<br/>
                                                Pittsburgh, PA 15233

									</p>
									<p class="address">412.564.1280</p>
									<div class="text-left btn-wrapper pl-3">
										<!--<button class="btn btn-info btn-sm">Get Directions</button>-->
										<a class="btn btn-info btn-sm" target ="_blank" href="https://www.google.com/maps/place/643+First+Avenue,+Pittsburgh,+PA+15219,+USA/@40.4357873,-80.0132225,14z/data=!4m5!3m4!1s0x8834f15af1d48341:0xb9f71126b33622b8!8m2!3d40.4357873!4d-79.995713">Get Directions</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</xpath>
	</template>
</odoo>