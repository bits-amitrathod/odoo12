<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="request_a_quote_template" name="Request A Quote">
        <t t-name="website.request-a-quote">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="pt32 pb32">
                        <div class="container pb-3">
                            <div class="text-center pt-3 pb-3">
                                <h1  class="about-header"> Request a Free <strong>Quote</strong> </h1>
                            </div>
                            <div class="row">
                                <div class="col-md-6 m-auto">
                                    <div class="section-description quote-detail">
                                        <p class="mb-0">Call, Email, or Fill in the form below if you would like a quote. </p>
                                        <div class="contact-detail">
                                             <i class="icon-email"></i>
                                            <a class="red" href="mailto: info@surgicalproductsolutions.com">
                                                info@surgicalproductsolutions.com
                                            </a>
                                        </div>
                                        <div class="contact-detail">
                                             <i class="icon-mobile"></i>
                                            <a class="red" href="javascript:void(0)">
                                                (412) 564–1280
                                            </a>
                                        </div>
                                         <div class="contact-detail">
                                             <i class="icon-printer-new"></i>
                                            <a href="javascript:void(0)">
                                                (412) 774–2345
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="pt32 pb32 bg-grey" style="">
                        <form action="/website_form/" method="post" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-model_name="mail.mail" data-success_page="/thank-you">
                            <div class="container pb-5">
                                <div class="row no-gutters">
                                    <div class="col-md" style="">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                             <input type="text" class="form-control o_website_form_input" name="title" placeholder="Title *" id="title" required=""/>
                                        </div>
                                    </div>

                                    <div class="col-md px-0 px-md-2" style="">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="First Name *" id="first_name" class="form-control o_website_form_input" name="first_name" required=""/>
                                        </div>
                                    </div>
                                    <div class="col-md px-0 px-md-2">
                                         <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="Last Name *" id="last_name" class="form-control o_website_form_input" name="last_name" required=""/>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="input-group has-float-label form-field">
                                            <input type="text" placeholder="Suffix " id="Suffix" class="form-control o_website_form_input" name="Suffix" />
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                     <div class="col-md-6">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="Phone *" id="Phone" class="form-control o_website_form_input" name="Phone" required=""/>
                                        </div>
                                    </div>
                                     <div class="col-md-6">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="Email *" id="Email" class="form-control o_website_form_input" name="Email" required=""/>
                                        </div>
                                    </div>
                                     <div class="col-md-12">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="Facility *" id="Facility" class="form-control o_website_form_input" name="Facility" required=""/>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="What services would you like a free quote for? *" id="services" class="form-control o_website_form_input" name="services" required=""/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="Address *" id="Address" class="form-control o_website_form_input" name="Address" required=""/>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group has-float-label">
                                            <input type="text" placeholder="Apt, suite, etc." id="suite" class="form-control o_website_form_input" name="suite"/>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group has-float-label">
                                            <input type="text" placeholder="Country" id="Country" class="form-control o_website_form_input" name="Country"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group has-float-label form-field o_website_form_required_custom">
                                            <input type="text" placeholder="City *" id="City" class="form-control o_website_form_input" name="City" required=""/>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="input-group has-float-label">
                                            <input type="text" placeholder="State" id="State" class="form-control o_website_form_input" name="State" />
                                        </div>
                                    </div>
                                     <div class="col-md-3">
                                        <div class="input-group has-float-label">
                                            <input type="text" placeholder="Zip Code" id="Zip_Code" class="form-control o_website_form_input" name="Zip_Code" />
                                        </div>
                                    </div>
                                     <div class="col-12">
                                          <div class="input-group has-float-label form-field o_website_form_required_custom o_website_form_required_custom">
                                                <textarea id="description" placeholder="Message *" class="form-control o_website_form_input" name="description"  required="" rows="5"><t t-esc="request.params.get('description', '')" /></textarea>
                                          </div>
                                     </div>
                                       <div class="col-md-12 text-center btn-wrapper pt-4">
                                            <span class="btn btn-info btn-sm action_button o_website_form_send">Submit</span>
                                        </div>
                                </div>
                            </div>
                            <input class="form-field" type="hidden" name="email_to" value="info@surgicalproductsolutions.com"/>
                            <input class="form-field" type="hidden" name="subject" value="Received New 'Request a Quote' Form"/>
                        </form>
                     </section>
                </div>
            </t>
        </t>
    </template>
</odoo>