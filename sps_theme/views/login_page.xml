<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ LOGIN ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <template id="auth_signup.login" inherit_id="web.login" name="Sign up - Reset Password">
        <xpath expr="//button[@type='submit']" position="before">
            <div t-if="signup_enabled" class="signup-link">New Customer?
                <a t-attf-href="/web/signup?{{ keep_query() }}" class="btn btn-link">
                    Sign up
                    <strong>
                        <span class="glyphicon glyphicon-menu-right" style="top: 3px;"/>
                    </strong>
                </a>
            </div>
        </xpath>
    </template>

    <template id="web.login" name="Login">
        <t t-call="web.login_layout">
            <section class="product-category">
                <div class="container">
                    <div class="text-center pt32 pb32">
                        <h1  class="about-header"> Customer <span class="black-font">Sign In</span> </h1>
                    </div>
                </div>
            </section>
            <section class="login-form pb-5">
                <div class="container">
                    <div class="row">
                         <div class="col-md-5 col-sm-5 m-auto">
                            <form class="contact-form" role="form"
                                  t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post"
                                  onsubmit="this.action = this.action + location.hash" style="margin-top: 45px;">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                                    <label for="db" class="control-label">Database</label>
                                    <div class="input-group">
                                        <input type="text" name="db" t-att-value="request.db" id="db" class="form-control"
                                               required="required" readonly="readonly"/>
                                        <span class="input-group-btn" style="vertical-align: top;">
                                            <a href="/web/database/selector" class="btn btn-default"
                                               style="padding: 14px 18px;height: 50px;">Select
                                                <i class="fa fa-database"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <p class="alert alert-danger" t-if="error">
                                    <t t-esc="error"/>
                                </p>
                                <p class="alert alert-success" t-if="message">
                                    <t t-esc="message"/>
                                </p>
                                <div class="form-group has-float-label field-login">

                                    <input type="text" name="login" t-att-value="login" placeholder="E-mail" id="login" class="form-control"
                                           required="required" autofocus="autofocus" autocapitalize="off"/>
                                </div>

                                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}"
                                   class="btn btn-link forgotPassword">Forgot your password?
                                </a>

                                <div class="form-group has-float-label field-password">

                                    <input type="password" placeholder="Password" name="password" id="password" class="form-control"
                                           required="required"
                                           autocomplete="current-password" t-att-autofocus="'autofocus' if login else None"
                                           maxlength="4096"/>
                                </div>

                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                <div class="clearfix oe_login_buttons btn-wrapper text-right pt-4">
                                    <button type="submit" class="btn btn-info btn-sm o_signup_btn">
                                        Sign In
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>

    <template id="signup_cstm" inherit_id="auth_signup.signup" name="Sign up">
        <xpath expr="//form" position="replace">
            <div class="product-category">
                <section class="product-category">
                    <div class="container">
                        <div class="text-center pt32 pb32">
                            <h1  class="about-header"> Create Account </h1>
                        </div>
                    </div>
                </section>
                <section class="login-form padding-60-y">
                    <div class="container">
                        <div class="row contact-form">
                            <div class="col-md-5 col-sm-5 m-auto">
                                <form class=" loginInSignUpForm" role="form" method="post" t-if="not message">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <t t-call="auth_signup.fields">
                                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                                    </t>
                                    <p class="alert alert-danger" t-if="error">
                                        <t t-esc="error"/>
                                    </p>
                                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                                    <input type="hidden" name="token" t-att-value="token"/>
                                    <div class="clearfix oe_login_buttons">
                                        <div class="btn-wrapper">
                                            <button type="submit" class="btn btn-info action_button sign_up" style="width: auto;">Sign up</button>
                                            <span class="pull-right signin-link">Returning
                                                Customer?
                                                <a t-if="signup_enabled" t-attf-href="/web/login?{{ keep_query() }}"
                                                   class="btn btn-link">
                                                    Sign in
                                                    <strong>
                                                        <span class="glyphicon glyphicon-menu-right" style="top: 3px;"/>
                                                    </strong>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

    <template id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">

        <div class="form-group has-float-label field-name">
            <input type="text" name="name" t-att-value="name" id="name" class="form-control"
                   required="required" t-att-readonly="'readonly' if only_passwords else None"
                   t-att-autofocus="'autofocus' if login and not only_passwords else None" placeholder="Full Name"/>
        </div>

        <div class="form-group has-float-label field-login">
            <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus"
                   autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None" placeholder="Email"/>
        </div>


        <div class="form-group has-float-label field-password">
            <input type="password" name="password" id="password" class="form-control"
                   required="required" t-att-autofocus="'autofocus' if only_passwords else None" placeholder="Password"/>
        </div>

        <div class="form-group has-float-label field-confirm_password">
            <input type="password" name="confirm_password" id="confirm_password" class="form-control"
                   required="required" placeholder="Confirm Password"/>
        </div>
    </template>

    <template id="auth_signup.reset_password" name="Reset password">
        <t t-call="web.login_layout">
            <div t-if="message">
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>
                <a href="/web/login" class="btn btn-link text-right d-block">Back to Login</a>
            </div>
            <section class="product-category">
                    <div class="container">
                        <div class="text-center pt32 pb32">
                            <h1  class="about-header"> Reset Password </h1>
                        </div>
                    </div>
                </section>
             <section class="login-form padding-60-y">
                <div class="container product-category">
                    <div class="col-md-5 col-sm-5 m-auto">

                        <form class="contact-form" role="form" method="post" t-if="not message">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <t t-if="token and not invalid_token">
                                <t t-call="auth_signup.fields">
                                    <t t-set="only_passwords" t-value="1"/>
                                </t>
                            </t>

                            <t t-if="not token">
                                <div class="form-group has-float-label field-login">
                                    <input type="text" name="login" t-att-value="login" id="login" class="form-control"
                                           autofocus="autofocus" required="required" autocapitalize="off" placeholder="Email"/>
                                </div>
                            </t>
                            <p style="font-style: italic;">
                                We will send you an email to reset your password.
                            </p>
                            <p class="alert alert-danger" t-if="error">
                                <t t-esc="error"/>
                            </p>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                            <input type="hidden" name="token" t-att-value="token"/>
                            <div class="clearfix oe_login_buttons">
                                <div class="btn-wrapper">
                                    <button type="submit" class="btn btn-info mr-3">Confirm</button>
                                    <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}"
                                       class="btn btn-danger forgetPasswordCancle">Cancel
                                    </a>
                                    <a t-if="invalid_token" href="/web/login" class="btn btn-danger forgetPasswordCancle">Cancel
                                    </a>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
             </section>
        </t>
    </template>

</odoo>
