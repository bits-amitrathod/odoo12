<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="sps_headerNavbar_template" name="Sps header template" inherit_id="website.template_header_default">
        <xpath expr="//div[@id='top_menu_container']"  position="before">
            <div class="top-header container d-flex" id="top-header">
                <ul class="contact-detail">
                    <li>
                        <a href="#">Contact Our Sales Team Today: <span>412.564.1280</span></a>
                    </li>
                </ul>
                <t t-nocache="header_search">
                    <t t-call="website.website_search_box_input">
                        <t t-set="_form_classes" t-valuef="o_wsale_products_searchbar_form flex-grow-1 {{_form_classes}}"/>
                        <t t-set="_submit_classes" t-valuef="btn btn-{{navClass}}"/>
                        <t t-set="_input_classes" t-valuef="border-0 text-bg-{{navClass}}"/>
                        <t t-set="search_type" t-valuef="products"/>
                        <t t-set="placeholder" t-valuef="SEARCH..."/>
                        <t t-set="action" t-value="'/shop'"/>
                        <t t-set="display_image" t-valuef="false"/>
                        <t t-set="display_description" t-valuef="false"/>
                        <t t-set="display_extra_link" t-valuef="false"/>
                        <t t-set="display_detail" t-valuef="false"/>
                        <t t-set="search" t-value="original_search or search or '' "/>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
</odoo>