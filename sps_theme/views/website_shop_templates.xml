<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- /shop product listing -->
    <!-- used for add some section top of shop page like  title - search - sorting -pagination in shop page  Done->checked -->
    <template id="sps_shop_products_inherit" inherit_id="website_sale.products" name="SPS Shop page inherit">
       <xpath expr="//div[@id='products_grid']//div[hasclass('products_header')]" position="before">
            <div class="text-center pt32">
                <h1 class="about-header" t-esc="title" />
                <h2 t-esc="sub_title" />
            </div>
       </xpath>

        <t t-call="website_sale.search" position="after">
            <div class="products_pager d-flex justify-content-center pt-3 pb-3">
                <t t-call="website.pager"/>
            </div>
        </t>
        <t t-if="is_view_active('website_sale.sort')" t-call="website_sale.sort" position="replace">
            <div t-attf-class="o_sortby_dropdown dropdown dropdown_sorty_by ms-lg-3 {{_classes}}">
                <a role="button" href="#" t-attf-class="dropdown-toggle btn btn-{{navClass}}" data-bs-toggle="dropdown">
                    <span class="d-none d-lg-inline">
                        <t t-if="isSortingBy" t-out="isSortingBy[0][1]"/>
                        <span t-else="1"> Sort By </span>
                    </span>
                    <i class="fa fa-sort-amount-asc d-lg-none"/>
                </a>
                <div class="dropdown-menu dropdown-menu-end" role="menu">
                    <t t-foreach="website_sale_sortable" t-as="sortby">
                        <a role="menuitem" rel="noindex,nofollow" t-att-href="keep('/shop', order=sortby[0])" class="dropdown-item">
                            <span t-out="sortby[1]"/>
                        </a>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>