<odoo>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Email Notification Template ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <record id="website_order_placed_mail_template" model="mail.template">
        <field name="name">Email Notification: Product Purchase Details</field>
        <field name="model_id" ref="website_sale.model_sale_order"/>
        <field name="email_to">${object.user_id.login}</field>
        <field name="email_cc">${('amitrathod@benchmarkit.solutions' if object.user_id.login=='info@surgicalproductsolutions.com' else 'info@surgicalproductsolutions.com, amitrathod@benchmarkit.solutions' | safe)}</field>
        <field name="subject">Please find the sales order that was placed online at shopsps.com</field>
        <field name="body_html">
            <![CDATA[
                <link href="css/bootstrap.min.css" rel="stylesheet">
                 <div style="margin:auto;width:100%;padding-left: 60px;" class="container"/>
                     <div margin-top: 50px;>
                      <div>
                           <p>Hi <span>Team</span>,</p>
                           <p>Please find below a listing of orders that have been placed online:</p>
                        </div>
                        <center>
                        </center>
                    </div>
                        <br/>
                        <table width="80%" class="table  table-condensed  table-bordered ">
                                <thead style='background-color:#D6DBDF;'>
                                    <tr>
                                         <th style="text-align: center;">Sales No</th>
                                         <th style="text-align: center;">SKU</th>
                                         <th style="text-align: center;">Product Name</th>
                                         <th style="text-align: center;">Quantity</th>
                                          <th style="text-align: center;">UOM</th>
                                         <th style="text-align: center;">Unit Price</th>
                                         <th style="text-align: center;">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 % for product in object.order_line:
                                      <tr>
                                             <td align="center">${product.order_id.name}</td>
                                            % if product.product_id.product_tmpl_id.default_code == False:
                                             <td></td>
                                             % else:
                                             <td align="center">${product.product_id.product_tmpl_id.default_code}</td>
                                              %endif
                                              <td align="center">${product.name}</td>
                                              <td align="center">${"%.0f"% product.product_uom_qty}</td>
                                              <td align="center">${product.product_uom.name}</td>
                                              <td align="center">${product.price_unit}</td>
                                              <td align="center">${product.price_subtotal}</td>
                                              </div>
                                      </tr>
                                            %endfor
                                </tbody>

                        </table>
                     </div>
                      <div  style="margin-top:20px">
                            <p>Thanks & Regards,</p>
                            <p> SPS Team </p>
                      </div>
                 </div>
                ]]>
        </field>
        <field name="user_signature" eval="False"/>
    </record>

</odoo>