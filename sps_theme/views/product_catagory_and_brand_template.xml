    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Product Item on list ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <template id="sps_theme_website_product_item_inherit" inherit_id="website_sale.products_item">
        <xpath expr="//*[hasclass('o_wsale_products_item_title')]" position="after">
            <h5>
                <strong t-out="product.product_brand_id.name"/>
            </h5>
        </xpath>
         <xpath expr="//div[hasclass('product_price')]" position="after">
             <!-- Show Actual Quantity on shop page -->
             <t t-if="product.actual_quantity &gt; 0">
                <div t-attf-class="availability_shop availability_message_#{product_template}">
                    <t t-esc="int(product.actual_quantity)"/> item(s) left
                </div>
            </t>
<!--             ~~~~~~~~~~~~~~~~~~ Expration~~~~~~~~~~~~~~~~ -->
            <t t-call="website_sales.productExpirationDate"/>

           <div t-if="product.actual_quantity &lt;= 0" t-attf-class="availability_message_#{product_template} linkCstm mt16">
                <i class="fa fa-exclamation-triangle"/> Temporarily out of stock
           </div>
        </xpath>
         <xpath expr="//div[hasclass('o_wsale_product_sub')]" position="after">
             <div t-if="product.actual_quantity &gt; 0">
                <t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>
                <input name="product_id" t-att-value="product_variant_id" type="hidden"/>
                <t t-if="product_variant_id and template_price_vals['price_reduce'] or not website.prevent_zero_price_sale">
                    <div class="btn-wrapper pb-3">
                        <a t-if="product._website_show_quick_add()" id="add_to_cart" class="btn btn-info btn-lg mt8 js_check_product a-submit"
                           href="#">Add to Cart
                        </a>
                    </div>
                </t>
             </div>
        </xpath>
    </template>

     <template id="sps_product_price_custom_web" inherit_id="website_sale.product_price" name="Product price cust" priority="10">
        <xpath expr="//span[hasclass('oe_price')]" position="replace">
            <b><span class="oe_price" style="white-space: nowrap;" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/></b>
        </xpath>
     </template>

