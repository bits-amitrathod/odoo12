<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.module.category" id="module_category_customer_requests_management">
            <field name="name">Customer Requests</field>
            <field name="description">Helps you handle your customer requests.</field>
            <field name="sequence">24</field>
        </record>

        <record id="group_customer_requests_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_customer_requests_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">The user will have access to his own data in the customer requests application.</field>
        </record>

         <record id="group_customer_requests_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">The manager will have an access to the customer requests application.</field>
            <field name="category_id" ref="module_category_customer_requests_management"/>
            <field name="implied_ids" eval="[(4, ref('group_customer_requests_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
</odoo>