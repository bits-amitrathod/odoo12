       <record id="view_res_partner_filter_inherit_custom" model="ir.ui.view">
            <field name="name">res.partner.select.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="/search/filter[@name='type_company']" position="after">
                    <filter string="Contract" name="contract" domain="[('contract', '!=', None)]"/>
               </xpath>
                <xpath expr="/search" position="inside">
                   <field name="saleforce_ac"/>
                   <field name="contract"/>
               </xpath>
            </field>
        </record>

        <menuitem name="Import" id="prioritization_engine.prioritization_imenu"
