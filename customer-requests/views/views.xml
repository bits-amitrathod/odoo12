        <record id="email_response_on_uploaded_document" model="mail.template">
            <field name="name">email response on uploaded documents</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">{{object.company_id.name}} &lt;{{(object.company_id.email or user.email)}}&gt;</field>
            <field name="email_to">{{ctx.get('customerEmail')}}</field>
            <field name="email_cc">{{ctx.get{'salespersonEmail')}}, {{ctx.get('keyAccountEmail')}}</field>
            <field name="subject">Email response {{(object.company_id.email or user.email)}}</field>
            <field name="body_html">{{ctx.get('body')}}</field>
            <field name="body_html" type="html">
                <p>
                    Dear <t t-esc="ctx['customerName']"/>,
                </p>
                <p style="text-align: left; margin-top: 10px;">
                    Unfortunately, we are currently out of stock on the products that you requested.
                    We have documented your request on your account.
                </p>
                <p style="text-align: left; margin-top: 10px;">
                    Please feel free to reach out to your direct Account Manager if you need additional assistance.
                </p>
                <p style="text-align: left; margin-top: 10px;">
                    We Appreciate your business,
                </p>
                <p style="text-align: left; margin-top: 10px;">
                    SPS Sales Team
                </p>
                <p style="text-align: left; margin-top: 2px;">
                    412-564-1280
                </p>
            </field>
<!--            <field name="user_signature" eval="False"/>-->
        </record>

