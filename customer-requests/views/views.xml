        <record id="customer-template-client-action" model="ir.actions.client">
            <field name="name">Customer Import Template</field>
            <field name="type">ir.actions.client</field>
            <field name="tag">importtemplate</field>
            <field name="params">[{'model': 'sps.customer.template', 'user_type': 'customer_rank', 'request_model':
                'sps.customer.requests', 'upload_document' : 'False'}]
            </field>
        </record>


        <record id="customer-document-client-action" model="ir.actions.client">
            <field name="name">Customer Upload Document</field>
            <field name="type">ir.actions.client</field>
            <field name="tag">importtemplate</field>
            <field name="params">[{'model': 'sps.customer.template', 'user_type': 'customer_rank', 'request_model':
                'sps.customer.requests', 'upload_document' : 'True'}]
            </field>
        </record>


        <record id="customer_documents_form_action" model="ir.actions.act_window">
            <field name="name">Imported Documents From Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sps.cust.uploaded.documents</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Email template for new email in inbox -->
        <record id="new_email_in_inbox" model="mail.template">
            <field name="name">New Email In Inbox</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">{{object.company_id.name}},{{(object.company_id.email or user.email)}} </field>
            <field name="email_to">{{object.email}}</field>
            <field name="email_cc">{{ctx.get('salesperson')}}, {{ctx.get('key_account')}}</field>
            <field name="subject">Email response {{(object.company_id.email or user.email)}}</field>
            <field name="body_html" type="html">
                <p>
                    Hi Administrator,
                </p>
                <p style="text-align: left; margin-top: 10px;">
                    New request for Stockhawk. Please see the below details:
                </p>
                <table style="width:100%;border:1px solid black;border-collapse:collapse;">
                    <tr>
                        <th style="border:1px solid black;border-collapse:collapse;">Email From</th>
                        <th style="border:1px solid black;border-collapse:collapse;">Email Subject</th>
                        <th style="border:1px solid black;border-collapse:collapse;">Customer Name</th>
                        <th style="border:1px solid black;border-collapse:collapse;">Upload Type</th>
                        <th style="border:1px solid black;border-collapse:collapse;">Date</th>
                    </tr>
                    <tr>
                        <td style="border:1px solid black;border-collapse:collapse;">
                            <t t-esc="ctx['emailFrom']"/>
                        </td>
                        <td style="border:1px solid black;border-collapse:collapse;">
                            <t t-esc="ctx['emailSubject']"/>
                        </td>
                        <td style="border:1px solid black;border-collapse:collapse;">
                            <t t-esc="ctx['customerName']"/>
                        </td>
                        <td style="border:1px solid black;border-collapse:collapse;">
                            Email
                        </td>
                        <td style="border:1px solid black;border-collapse:collapse;">
                            <t t-esc="ctx['date']"/>
                        </td>
                    </tr>
                </table>
                <p>
                    Thanks &amp; Regards,<br/>
                    ODOO <br/>
                    <img src="/website_quote_ext/static/src/img/stockhawk_logo_2.jpg" style="height: auto; width: 150px;" alt="Stockhawk"/>
                </p>
            </field>
<!--            <field name="user_signature" eval="False"/>-->
        </record>

