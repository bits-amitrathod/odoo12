        <menuitem name="Documents" id="prioritization_engine.prioritization_documents_imenu"
                  parent="prioritization_engine.menu_root"/>

        <menuitem name="Imported Documents" id="prioritization_engine.prioritization_imported_documents_menu"
                  parent="prioritization_engine.prioritization_documents_imenu" action="customer_documents_form_action"/>

        <menuitem name="Customer Template" id="prioritization_engine.prioritization_customer_template_menu"
                  parent="prioritization_engine.prioritization_imenu"
                  action="customer-template-client-action"/>

        <menuitem name="Upload Document" id="prioritization_engine.prioritization_customer_document_menu"
                  parent="prioritization_engine.prioritization_documents_imenu"
