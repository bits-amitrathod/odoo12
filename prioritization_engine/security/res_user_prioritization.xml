<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.module.category" id="module_category_prioritization_management">
            <field name="name">Prioritization</field>
            <field name="description">Helps you handle your prioritization.</field>
            <field name="sequence">24</field>
        </record>

        <record id="group_prioritization_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_prioritization_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the prioritization application.</field>
        </record>

         <record id="group_prioritization_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">the user will have an access to the prioritization application.</field>
            <field name="category_id" ref="module_category_prioritization_management"/>
            <field name="implied_ids" eval="[(4, ref('group_prioritization_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
</odoo>