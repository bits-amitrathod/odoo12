<odoo>
  <data>
      <record id="view_order_form_ex" model="ir.ui.view">
            <field name="name">sale.order.form_ex</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

             <button name="action_quotation_send"  position="after">
                 <field name="show_validate" invisible="1"/>
                 <button name="action_quotation_send" string="Send by Email" type="object" states="engine" class="btn-primary"/>
                 <button name="print_quotation" string="Print" type="object" states="engine" class="btn-primary o_sale_print"/>
                 <button name="action_confirm" id="action_confirm"
                    string="Confirm Sale" class="btn-primary" type="object"
                    attrs="{'invisible': [('state', 'not in', ['engine'])]}"/>
                 <button name="action_cancel" states="engine" type="object" string="Cancel"/>
             <button name="action_validate" attrs="{'invisible': ['|', ('show_validate', '=', False),('state', 'not in', 'sale')]}" string="Validate" groups="stock.group_stock_user" type="object" class="oe_highlight"/>
             </button>
             <button name="action_cancel" position="after" >
             <button name="action_void" string="Voided" type="object" states="draft,sent"/>
             </button>
             <field name="partner_shipping_id" position="after">
                 <field name="preferred_method"/>
                 <field name="shipping_terms"/>
             </field>
            <field name="payment_term_id" position="after">
                 <field name="carrier_info"/>
                 <field name="carrier_acc_no"/>
             </field>
             <xpath expr="/form/sheet/notebook/page[1]/field[@name='order_line']/tree/field[@name='currency_id']" position="after">
                      <button name="action_show_details" string="Register lots, packs, location" type="object" icon="fa-list"  options='{"warn": true}' states="sale"/>
             </xpath>
      </field>
        </record>
      <record id="view_invoice_form_ex" model="ir.ui.view">
            <field name="name">account.invoice.form_ex</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                 <field name="payment_term_id" position="after">
                             <field name="preferred_method"/>
                             <field name="shipping_terms"/>
                 </field>
                <field name="date_due" position="after">
                     <field name="expiration_date"/>
                </field>
                 <field name="comment" position="before">
                      <field name="note" class="oe_inline" placeholder="Customer Message....." style="width:50% !important;"/>
                      <div class="oe_clear"/>
                 </field>
                <xpath expr="/form/sheet[1]/notebook/page[@name='other_info']/group/group[2]/field[@name='origin']" position="replace">
                       <field name="origin" string="Sale Order#" groups="base.group_user" attrs="{'invisible': [('origin', '=', False)]}"/>
                 </xpath>
                <xpath expr="/form/sheet[1]/notebook/page[@name='other_info']/group/group[1]/field[@name='name']" position="replace">
                        <field name="name" string="Purchase Order#"/>
                 </xpath>
                <xpath expr="/form/sheet/notebook/page[@name='other_info']/group/group[1]/field[@name='name']" position="after">
                        <field name="memo"/>
                 </xpath>
            </field>
        </record>
      <record id="invoice_supplier_form_ex" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form_ex</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                 <field name="origin" position="replace">
                    <field name="origin" string="Purchase Order#"    attrs="{'invisible': [('origin', '=', False)]}"/>
                 </field>
                 <xpath expr="/form/sheet[1]/notebook/page[@name='other_info']/group/group[1]/field[@name='name']" position="replace">
                        <field name="name" string="Sale Order#"/>
                 </xpath>
                <xpath expr="/form/sheet[1]/notebook/page[@name='other_info']/group/group[1]/field[@name='name']" position="after">
                        <field name="memo"/>
                 </xpath>
            </field>
        </record>
  </data>
</odoo>
