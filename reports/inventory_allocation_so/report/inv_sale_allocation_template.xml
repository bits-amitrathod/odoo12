<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inv_sale_allocation_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <style>
                        .noborders {
                        border: 0;
                        }

                        <!--.table-bordered > tbody > tr > td,.table-bordered > tbody > tr > th {-->
                        <!--border: 1px solid #000;-->
                        <!--}-->
                    </style>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Inventory Allocation For Sale Orders</h4>
                            </b>
                        </center>

                    </div>
                    <br/>
                    <div t-foreach="sale_order_list" t-as="sale_order" class="row">
                        <div class="col-md-12">
                            <strong>
                                <span t-esc="sale_order[0]"/>
                            </strong>
                            <hr style="display: block;height: 1px;border: 0;border-top-color: currentcolor;border-top-style: none;border-top-width: 0px;border-top: 1px solid black;margin-top: 0px;padding: 0;"/>
                        </div>

                        <div class="col-md-12" >

                            <table class="table table-condensed  table-bordered" >
                                <thead >
                                    <tr>
                                        <th>Product SKU</th>
                                        <th>Product Name</th>
                                        <th class="text-right">Qty</th>
                                        <th class="text-right">Cost</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody" style="border: 1px solid black;width:100%">
                                    <tr t-foreach="sale_order[2]" t-as="product">
                                        <td>
                                            <span t-esc="product[0]"/>
                                        </td>
                                        <td >
                                            <span t-esc="product[1]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="product[2]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="product[3]" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div id="total" class="row" style="width: 47%;float: right;margin: 5px;">
                                <div>
                                    <table class="table table-condensed" >
                                        <tr >
                                            <td style="border-top: 1px solid black">
                                                <strong>Total</strong>
                                            </td>
                                             <td class="text-right" style="border-top: 1px solid black">
                                                <span  t-esc="sale_order[3]"/>
                                            </td>
                                            <td class="text-right" style="border-top: 1px solid black">
                                                <span t-esc="sale_order[1]"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                </page>
            </t>
        </t>
    </template>
</odoo>