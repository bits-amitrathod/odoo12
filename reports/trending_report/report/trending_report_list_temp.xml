<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="trendingreportlist_temp_test">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                       <div class="col-md-12">
                            <b>
                                <h2 style="text-align: center">Surgical Product Solutions</h2>
                                <h4 style="text-align: center">Trending Report</h4>
                            </b>
                        </div>
                        <center>
                        </center>
                    </div>
                    <br/>
                    <table class="table table-sm" style="border: 1px solid black;font-size: 12px;">
                        <t t-set="code_value" t-value="code"/>
                        <thead>
                            <tr style="border: 1px solid black;">
                                <th style="border: 1px solid black;text-align: center;">Customer Name</th>
                                <th style="border: 1px solid black;text-align: center;">Months Ago First Order</th>
                                <t t-if="int(code_value) == 12">
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=11)).strftime('%b - %Y')"/>
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=10)).strftime('%b - %Y')"/>
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=9)).strftime('%b - %Y')"/>
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=8)).strftime('%b - %Y')"/>
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=7)).strftime('%b - %Y')"/>
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;">
                                        <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=6)).strftime('%b - %Y')"/>
                                    </th>
                                </t>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=5)).strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=4)).strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=3)).strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=2)).strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="(datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date()- relativedelta(months=1)).strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">
                                    <span t-esc="datetime.datetime.strptime(str(start_date), '%Y-%m-%d').date().strftime('%b - %Y')"/>
                                </th>
                                <th style="border: 1px solid black;text-align: center;">Total Purchased Month</th>
                                <th style="border: 1px solid black;text-align: center;">Average</th>
                                <th style="border: 1px solid black;text-align: center;">Trend</th>
                                <th style="border: 1px solid black;text-align: center;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="total_value" t-value="0"/>
                            <tr t-foreach="data" t-as="order" style="page-break-inside: avoid">
                                <td style="border: 1px solid black;">
                                    <span t-esc="order.display_name"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order.month_count"/>
                                </td>
                                <t t-if="int(code_value) == 12">
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month12" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month11" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month10" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month9" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month8" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;">
                                        <span t-esc="order.month7" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                </t>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order.month6"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td align="center" style="border: 1px solid black;">
                                    <span t-esc="order.month5"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.month4"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td align="center" style="border: 1px solid black;">
                                    <span t-esc="order.month3"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.month2"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.month1"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td align="center" style="border: 1px solid black;">
                                    <span t-esc="order.month_total"/>
                                </td>
                                <td style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.average_sale"
                                          t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                </td>
                                <td style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.trend_val"/>
                                </td>
                                <td align="right" style="border: 1px solid black;white-space:nowrap;">
                                    <span t-esc="order.total_sale" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    <t t-set="total_value" t-value="total_value+order.total_sale"/>
                                </td>
                            </tr>
                            <tr>
                                <t t-if="int(code_value) == 12">
                                    <td colspan="17" style="text-align: right;">Total</td>
                                </t>
                                <t t-else="">
                                    <td colspan="11" style="text-align: right;">Total</td>
                                </t>
                                <td style="text-align: right;  border: 1px solid black;">
                                    <span t-esc="total_value" t-options='{"widget": "monetary", "display_currency": data[0].currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </page>
            </t>
        </t>
    </template>
</odoo>