<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="trending_report_popup_view" model="ir.ui.view">
            <field name="name">Trending Report List</field>
            <field name="model">trendingreportlist.popup</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <group>
                            <field name="compute_at_date" widget="radio"/>
                            <field name="start_date" attrs="{'invisible': [('compute_at_date', '=', 0)]}"/>
                            <field name="end_date" attrs="{'invisible': [('compute_at_date', '=', 0)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="trending_report_list_id" model="ir.actions.act_window">
            <field name="name">Trending Report</field>
            <field name="res_model">trendingreportlist.popup</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="trending_report_popup_view"/>
            <field name="target">new</field>
            <field name="context">{'default_compute_at_date': 0, 'valuation': True}</field>
        </record>

        <record model="ir.ui.view" id="trending_report_list">
              <field name="name">purchase.vendor.view.list</field>
              <field name="model">res.partner</field>
              <field name="priority">20</field>
              <field name="arch" type="xml">
                <tree create="false" edit="false" >
                    <field name="name"/>
                     <field name="average_sale"/>
                    <field name="trend_val"/>
                    <field name="month6"/>
                    <field name="month5"/>
                    <field name="month4"/>
                    <field name="month3"/>
                    <field name="month2"/>
                    <field name="month1"/>
                    <field name="total_sale"/>
                </tree>
              </field>
        </record>




        <menuitem id="menu_trending_report_list_report"
                  name="Trending Report"
                  action="trending_report_list_id"
                  parent="sale.menu_sale_report"
                  sequence="5"/>

    </data>

</odoo>
