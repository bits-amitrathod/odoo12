<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_by_count_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Sales By Count</h4>
                            </b>
                        </center>
                    </div>
                    <t t-foreach="sales" t-as="location">
                        <t t-set="sale" t-value="sales[location]"/>
                        <div>
                            <strong>
                            <span t-esc="location"/></strong>
                        </div>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 15%;">
                                        Product SKU
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;">
                                        Product Name
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Quantity
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sale['product']" t-as="product">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product['sku_code']"/>
                                        ea
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product['product_name']"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="product['quantity']"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </page>
            </t>
        </t>
    </template>
</odoo>