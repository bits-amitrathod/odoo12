<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="templ">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>On Hand By Expiration Date</h4>
                                <h4>Reporting Date: <span t-esc="data['report_date']"/></h4>
                            </b>
                        </center>
                        <br/>
                            <t>
                                <t t-set="color_value" t-value="0"/>
                                <table class="table table-condensed" style="border: 1px solid black;">
                                    <thead>
                                        <tr style="">
                                            <th style="text-align: center; border: 1px solid black;">Product SKU</th>
                                            <th style="text-align: center; border: 1px solid black;">Product Name</th>
                                            <th style="text-align: center; border: 1px solid black;">Product Qty</th>
                                            <th style="text-align: center; border: 1px solid black;">Location</th>
                                            <th style="text-align: center; border: 1px solid black;">Expiration Date</th>
                                            <th style="text-align: center; border: 1px solid black;">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="data['items']" t-as="product">
                                            <td style="border: 1px solid black; width: 15%;">
                                                <span t-esc="product.name"/>
                                                <t t-set="color_value" t-value="product.color_value"/>
                                            </td>
                                            <td align="left" style="border: 1px solid black;width: 35%;">
                                                <span t-esc="product.product_id.product_tmpl_id.name"/>
                                            </td>
                                            <td align="right" style="border: 1px solid black;width: 10%;">
                                                <span t-esc="product.qty"/>
                                            </td>
                                            <td align="left" style="border: 1px solid black;width: 15%;">
                                                <span t-esc="product.location_id.complete_name"/>
                                            </td>
                                            <td align="right" style="border: 1px solid black;width: 15%;">
                                                <t t-if="color_value==1"><font color="red"><span t-esc="product.expiration_date"/></font></t>
                                                <t t-if="color_value==2"><font color="orange"><span t-esc="product.expiration_date"/></font></t>
                                                <t t-if="color_value==3"><font color="green"><span t-esc="product.expiration_date"/></font></t>
                                            </td>
                                            <td align="left" style="border: 1px solid black;width: 10%;">
                                                <t t-if="color_value==1"><font color="red"><span t-esc="product.status"/></font></t>
                                                <t t-if="color_value==2"><font color="orange"><span t-esc="product.status"/></font></t>
                                                <t t-if="color_value==3"><font color="green"><span t-esc="product.status"/></font></t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>