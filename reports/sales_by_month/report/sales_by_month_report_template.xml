<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_by_month_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Sales By Month</h4>
                            </b>
                        </center>
                        <center>
                            <t t-set="date" t-value="data[0][6]" />
                            <t t-if="date != 'False'">
                                <b><h5 style="display: inline;">Date Range: <span t-esc="data[0][6]" /> To <span t-esc="data[0][7]" /></h5></b>
                            </t>
                        </center>
                    </div>
                    <br/>
                    <div>
                        <t t-set="total_price" t-value="0"/>
                        <t t-set="total_qty" t-value="0"/>
                        <t t-set="currency" t-value="0"/>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead style="display: table-header-group;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: center; width:15%; ">Product SKU</th>
                                    <th style="border: 1px solid black;text-align: center; width:50%;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:10%;">
                                       Sales Price
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:10%;">
                                       Sales Quantity
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:15%;">
                                       Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data" t-as="product">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product[0]"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product[1]"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product[2]"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product[3]"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product[8]"/> <span t-esc="product[4]" />
                                        <t t-set="total_qty" t-value="total_qty + product[3]" />
                                        <t t-set="total_price" t-value="total_price + product[4]" />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="total_qty"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="data[0][8]"/> <span t-esc="total_price"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>