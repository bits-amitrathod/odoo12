<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="receiving_list_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Receiving List</h4>
                            </b>
                        </center>
                        <br/>
                        <t>
                            <table style="width: 100%;">
                                <tr>
                                    <td style="width: 50%;"><b>Order #: </b><span t-esc="data['order_id']"/></td>
                                    <td style="width: 50%;">
                                        <b>Order Name:</b>  <span t-esc="data['name']"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 50%;"><b>Type: </b><span t-esc="data['type']"/></td>
                                    <td style="width: 50%;">
                                        <b>State:</b>  <span t-esc="data['state']"/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <t>
                                <table class="table table-condensed" style="border: 1px solid black;">
                                    <thead>
                                        <tr style="">
                                            <th style="text-align: center;center; border: 1px solid black; width: 10%;">Product SKU</th>
                                            <th style="text-align: center; border: 1px solid black; center;width: 70%;">Product</th>
                                            <th style="text-align: center; border: 1px solid black; width: 10%">Qty To Receive</th>
                                            <th style="text-align: center; border: 1px solid black; width:10%">Qty Received</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="data['lines']" t-as="product">
                                            <td style="border: 1px solid black; width: 10%;">
                                                <span t-esc="product[0]"/>
                                            </td>
                                            <td align="center" style="border: 1px solid black;width: 70%;">
                                                <span t-esc="product[1]"/>
                                            </td>
                                            <td align="right" style="border: 1px solid black;width: 10%;">
                                                <span t-esc="product[2]"/> <b> ea</b>
                                            </td>
                                            <td align="right" style="border: 1px solid black;width: 10%;">
                                                <span t-esc="product[3]"/> <b> ea</b>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                    </div>
                    <!--<br/>-->
                </page>
            </t>
        </t>
    </template>
</odoo>