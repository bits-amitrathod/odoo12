<odoo>
    <data>
        <record id="view_receiving_list_popup" model="ir.ui.view">
            <field name="name">Receiving List</field>
            <field name="model">receiving_list.popup</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <group>
                            <field name="order_type" />

                            <field name="show_with_filter" invisible="1" />
                            <field name="show_sales_with_filter" invisible="1" />

                            <field name="customer_id" attrs="{'invisible': [('order_type', '!=', 2)]}" domain = "[('customer','=',True)]"/>
                            <field name="vendor_id" attrs="{'invisible': [('order_type', '!=', 1)]}" domain = "[('supplier','=',True)]"/>

                            <field name="sale_order_id" attrs="{'invisible': ['|', ('show_sales_with_filter', '=', 1), ('order_type', '!=', 2)], 'required' : [('show_sales_with_filter', '=', 0), ('order_type', '=', 2)]}" />
                            <field name="sale_order_id_with_filter" attrs="{'invisible': ['|',('show_sales_with_filter', '=', 0), ('order_type', '!=', 2)], 'required' : [('show_sales_with_filter', '=', 1), ('order_type', '=', 2)]}" domain="[('partner_id', '=', customer_id)]" />

                            <field name="purchase_order_id" attrs="{'invisible': ['|', ('show_with_filter', '=', 1), ('order_type', '!=', 1)], 'required' : [('show_with_filter', '=', 0), ('order_type', '=', 1)]}" />
                            <field name="purchase_order_id_with_filter" attrs="{'invisible': ['|', ('show_with_filter', '=', 0), ('order_type', '!=', 1)], 'required' : [('show_with_filter', '=', 1), ('order_type', '=', 1)]}" domain="[('partner_id', '=', vendor_id)]" />
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_receiving_list" model="ir.actions.act_window">
            <field name="name">Receiving List</field>
            <field name="res_model">receiving_list.popup</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_receiving_list_popup"/>
            <field name="target">new</field>
            <field name="context">{'valuation': True}</field>
        </record>


        <menuitem name="Receiving List" id="receiving_list_menu" parent="purchase.purchase_report"
                  action="receiving_list.action_receiving_list"/>
    </data>
</odoo>