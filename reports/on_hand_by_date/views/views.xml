<odoo>
    <data>
        <record id="view_on_hand_by_date_popup" model="ir.ui.view">
            <field name="name">On Hand By Date</field>
            <field name="model">on_hand_by_date.popup</field>
            <field name="arch" type="xml">
                <form string="Filter">
                    <group>
                        <group>
                            <field name="report_date"/>
                            <field name="vendor_id"/>
                            <field name="product_id" />
                            <!--domain="[('active','!=', show_inactive_products)]"-->
                            <!--<field name="costing_method" attrs="{'invisible': [('show_cost', '=', False)]}"/>-->
                        </group>
                        <group>
                            <group>
                                <field name="show_inactive_products" widget="checkbox"/>
                                <field name="include_zero_quantities" widget="checkbox"/>
                            </group>
                            <group>
                                <field name="show_cost" widget="checkbox"/>
                                <field name="show_only_zero_quantities" widget="checkbox"/>
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_on_hand_by_date" model="ir.actions.act_window">
            <field name="name">On Hand By Date</field>
            <field name="res_model">on_hand_by_date.popup</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_on_hand_by_date_popup"/>
            <field name="target">new</field>
            <field name="context">{'valuation': True}</field>
        </record>


        <record model="ir.ui.view" id="on_hand_by_date_list_view">
            <field name="name">product.on.order.view.list</field>
            <field name="model">on_hand_by_date.stock</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sku_code" string="SKU/Catalog No."/>
                    <field name="product_id" string="Product"/>
                    <field name="vendor_name" string="Vendor"/>
                    <field name="unit_price" />
                    <field name="qty_on_hand" string="Quantity" sum="qty_on_hand"/>
                    <field name="assets_value" sum="assets_value" />
                    <field name="costing_method" invisible="1" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="on_hand_by_datelist_view">
            <field name="name">product.on.order.view.list</field>
            <field name="model">on_hand_by_date.stock</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" string="Product"/>
                    <field name="sku_code" string="SKU/Catalog No."/>
                    <field name="qty_on_hand" string="Quantity"/>
                    <field name="vendor_name" string="Vendor"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="on_hand_by_dateform_view">
            <field name="name">product.on.order.view.form</field>
            <field name="model">on_hand_by_date.stock</field>
            <field name="arch" type="xml">
                <form create="false" update="false">
                    <group>
                        <field name="product_id" string="Product"/>
                        <field name="sku_code" string="SKU/Catalog No."/>
                        <field name="qty_on_hand" string="Quantity"/>
                         <field name="vendor_name" string="Vendor"/>
                    </group>
                </form>
            </field>
        </record>

        <menuitem name="On Hand By Date" id="on_hand_by_date_menu" parent="stock.menu_warehouse_report"
                  action="on_hand_by_date.action_on_hand_by_date"/>
    </data>
</odoo>