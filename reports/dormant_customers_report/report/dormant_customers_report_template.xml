<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dorm_cust_report_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Dormant Customers</h4>
                            </b>
                        </center>
                    </div>
                    <br/>
                    <div>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead style="display: table-header-group;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: center; width:60%;">Customer</th>
                                    <th style="border: 1px solid black;text-align: center; width:15%">Last Purchase Date</th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:25%">
                                       Last Purchase Product
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data" t-as="order">
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.display_name"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="order.last_purchase_date" widget="date"/>
                                    </td>
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.last_purchased_product"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>