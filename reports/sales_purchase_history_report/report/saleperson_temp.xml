<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchasehistory_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2>Surgical Product Solutions</h2>
                            <h4>Sales Purchase History</h4>
                        </b>
                    </center>
                    <center>
                        <h4 t-if="date">
                            <span t-esc="date"/>
                        </h4>
                    </center>
                    </div>
                    <br/>

                        <t t-set="total_price" t-value="0"/>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;">Product SKU</th>
                                    <th style="border: 1px solid black;">Customer Name</th>
                                    <th style="border: 1px solid black;">Sales Order</th>
                                    <th style="border: 1px solid black;">Product Name</th>
                                    <th style="border: 1px solid black;">Delivered Date</th>
                                    <th style="border: 1px solid black;">Delivered Qty</th>
                                    <th style="border: 1px solid black;">UOM</th>
                                    <th style="border: 1px solid black;">Unit Price</th>
                                    <th style="border: 1px solid black;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data" t-as="order">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.product_sku"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.customer_name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.sale_order"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.product_name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.delivered_date" t-options="{'widget':'date'}"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.qty_delivered"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.product_uom_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.unit_price" t-options='{"widget": "monetary","display_currency": order.product_id.currency_id}' />
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order.total_price" t-options='{"widget": "monetary","display_currency": order.product_id.currency_id}'/>
                                        <t t-set="total_price" t-value="total_price + order.total_price" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="8" style="border: 1px solid black; text-align: right;">
                                        <b>Total</b>
                                    </td>
                                    <td style="border: 1px solid black; text-align: right;">
                                        $ <span t-esc="total_price"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </page>
            </t>
        </t>
    </template>
</odoo>