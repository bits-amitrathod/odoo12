<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sr_sale_purchase_report_form_view" model="ir.ui.view">
            <field name="name">sale.purchase.history.report.form.view</field>
            <field name="model">sale.purchase.history.report</field>
            <field name="arch" type="xml">
                <form string="Sales Purchase History">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="product_id" widget="many2many_tags"/>
                            <field name="order_partner_id" operator="child_of"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="contract_id" widget="many2many_tags" placeholder="Contracts..." operator="child_of" />
                            <field name="order_account_manager_cust" operator="child_of" />
                            <field name="category_id" widget="many2many_tags" placeholder="Tags..." operator="child_of" />
                        </group>
                    </group>

                    <footer>
                        <button name="open_table" string="VIEW REPORT" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_report_purchase_wizard" model="ir.actions.act_window">
            <field name="name">Sales Purchase History</field>
            <field name="res_model">sale.purchase.history.report</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="sr_sale_purchase_report_form_view"/>
            <field name="target">new</field>
            <field name="context">{'valuation': True}</field>
        </record>

        <record model="ir.ui.view" id="list_view">
              <field name="name">product.sale.purchase.history.view.list</field>
              <field name="model">sale.order.line</field>
              <field name="priority">21</field>
              <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">

                    <field name="product_sku_ref" string="Product SKU"/>
                    <field name="customer_name" string="Customer Name"/>
                    <field name="sales_person_cust_name" />
                    <field name="account_manager_cust_name" />
                    <field name="order_id" string="Sales Order#"/>
                    <field name="product_id" string="Product Name"/>
                    <field name="is_broker_opt" />
                    <field name="is_shared_opt" />
                    <field name="sales_team_id" />
                    <field name="sale_sales_margine" />
                    <field name="delivered_date" string="Delivered Date"/>
                    <field name="qty_delivered_converted" string="Delivered Qty" />
                    <field name="product_uom_converted" string="UOM"/>
                    <field name="unit_price_converted" widget="monetary" string="Unit Price" />
                    <field name="total_price_converted" widget="monetary" string="Total" sum="Total"/>
                    <field name="currency_id"  invisible="1" />
                    <field name="quotations_per_code"  />

                </tree>
              </field>
        </record>
        <record id="view_sales_order_line_view_cstm" model="ir.ui.view">
            <field name="name">sale.order.line.view</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="order_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_sku_ref"/>
                                <field name="unit_price_converted"/>
                                <field name="customer_name"/>
                                <field name="quotations_per_code"  />
                                <field name="account_manager_cust_name" />
                            </group>
                            <group>
                                <field name="qty_delivered_converted" string="Required Quantity"/>
                                <field name="qty_delivered_converted" string="Delivered Quantity"/>
                                <field name="unit_price_converted" widget="monetary"/>
                                <field name="total_price_converted" string="Total Price" widget="monetary" sum="Total"/>
                                <field name="delivered_date" string="Delivered Date"/>
                                <field name="currency_id"  invisible="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_purchase_history_popup" model="ir.ui.view">
            <field name="name">salepuchasehistory.export.popup</field>
            <field name="model">salepuchasehistory.export</field>
            <field name="arch" type="xml">
                <form string="Export Payroll Report">
                    <group>
                        <group>
                            <field name="compute_at_date" widget="radio"/>
                            <field name="start_date" attrs="{'invisible': [('compute_at_date', '=', 0)], 'required' : [('compute_at_date', '=', 1)]}"/>
                            <field name="end_date" attrs="{'invisible': [('compute_at_date', '=', 0)], 'required' : [('compute_at_date', '=', 1)]}"/>
                        </group>
                        <group>
                            <div>Click On ' Export To File ' button to export payroll report file</div>
                        </group>
                    </group>
                    <footer>
                        <button name="download_excel_sale_puchase_history" string="Export To File" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Export Payroll Report"
                    res_model="salepuchasehistory.export"
                    src_model="sale.order.line"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"
                    id="sale_purchase_history_act_window"/>

        <menuitem id="menu_sale_report_purchase_wizard" name="Sales Purchase History" action="action_sale_report_purchase_wizard" parent="sale.menu_sale_report" sequence="22"/>
    </data>
</odoo>
