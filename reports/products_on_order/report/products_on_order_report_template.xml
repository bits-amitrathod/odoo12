<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="prod_on_order_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4> Products On Order </h4>
                        </b>
                    </center>

                    </div>
                    <br/>
                    <t t-set="currency" t-value="0" />
                    <t t-foreach="data['form']" t-as="products_on_order">
                        <center>
                            <b>
                                <span>Product# :</span>
                                <span t-esc="products_on_order[0]"/>
                                <h4 t-if="date">
                                    <span t-esc="date"/>
                                </h4>
                            </b>
                        </center>
                        <table class="table table-condensed" style="">
                            <thead>
                                <tr style="">
                                    <th width="10%" style="text-align: center;center;">Sales Order</th>
                                    <th>Customer Name</th>
                                    <th>Product SKU</th>
                                    <th style="text-align: center;">Order Date</th>
                                    <th style="text-align: center;">Due Date</th>
                                    <th width="10%" style="text-align: right;">Qty Ordered</th>
                                    <th width="10%" style="text-align: right;">Qty Remaining</th>
                                    <th width="10%" style="text-align: right;">UOM</th>
                                </tr>
                               </thead>
                            <tbody>
                                <tr t-foreach="products_on_order[1]" t-as="order">
                                    <td width="10%" style="text-align: center;center;">
                                        <span t-esc="order[0]"/>
                                    </td>
                                    <td style="">
                                        <span t-esc="order[1]"/>
                                    </td>
                                    <td style="">
                                        <span t-esc="order[2]"/>
                                    </td>
                                    <td width="15%" align="center" style="">
                                          <span t-esc="order[3]" t-options="{'widget': 'date'}"/>
                                    </td>
                                    <td width="10%" align="center" style="">
                                          <span t-esc="order[4]" t-options="{'widget': 'date'}"/>
                                    </td>
                                    <td width="10%" align="right" style="">
                                          <span t-esc="order[5]"/>
                                    </td>
                                    <td width="10%" align="right" style="">
                                          <span t-esc="order[6]"/>
                                    </td>
                                    <td width="10%" align="right" style="">
                                          <span t-esc="order[7]"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5" style="text-align: right;">
                                        <b>Total SO Items Remaining</b>
                                    </td>
                                    <td align="right" style="white-space: nowrap;">
                                        <span t-esc="products_on_order[2]"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </page>
            </t>
        </t>
    </template>
</odoo>