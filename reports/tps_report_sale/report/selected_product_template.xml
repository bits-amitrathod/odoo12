<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_products">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <page>
                <div class="oe_structure"/>
                <div class="row">
                    <center>
                        <b>
                            <h3>Surgical Product Solutions</h3>
                            <h2>T.P.S Report</h2>

                        </b>
                    </center>
                    <center>
                         <h5 style="display: inline;">Date Range:<span t-esc="data[0][3]" />-<span t-esc="data[0][4]" /></h5>
                        <!--Date Range: <b>-->
                        <!--<span t-esc="start_date"/>-->
                        <!-- - -->
                        <!--<span t-esc="end_date"/>-->
                        <!--</b>-->
                    </center>
                </div>
                <br/>


                <!--<div class="table-responsive">-->
                    <table class="table table-condensed table-bordered" >
                        <tr>
                            <!--<th style="border: 1px solid black;text-align: center;">Internal Reference</th>-->
                            <th style="border: 1px solid white;border-bottom: 1px solid black;">Product SKU</th>
                            <th style="border: 1px solid white;border-bottom: 1px solid black;" >Product Name</th>
                            <th class="text-right"  style="border: 1px solid white;border-bottom: 1px solid black;">Sales</th>

                        </tr>


                        <t t-foreach="data" t-as="a">
                            <tr>
                                <!--<td style="border: 1px solid black;">-->
                                    <!--<span t-esc="a.default_code"/>-->
                                <!--</td>-->
                                <td style="border: 1px solid white;">
                                    <span t-esc="a[0]"/>
                                </td>
                                <td style="border: 1px solid white;">
                                    <span t-esc="a[1]"/>
                                </td>

                                <td align="right" class="text-right" style="border: 1px solid white;">
                                    <span t-esc="a[2]" />
                                </td>
                            </tr>
                        </t>
                    </table>
                <!--</div>-->


            </page>
        </t>
        </t>

    </template>
</odoo>
