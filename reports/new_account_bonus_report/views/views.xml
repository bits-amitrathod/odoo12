<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view -->
        <record model="ir.ui.view" id="new_account_bonus_report_list_view">
              <field name="name">new.account.bonus.report.view.list</field>
              <field name="model">new.account.bonus.report</field>
              <field name="priority">20</field>
              <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="currency_id" invisible="1" optional="show"/>
                    <field name="customer" optional="show"/>
                    <field name="business_development" optional="show"/>
                    <field name="customer_business_development" invisible="1" optional="show"/>
                    <field name="key_account" optional="show"/>
                    <field name="customer_key_account" invisible="1" optional="show"/>
                    <field name="sale_order_id" optional="show"/>
                    <field name="invoice_date" widget="date" optional="show"/>
                    <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show"/>
                    <field name="amount_total_thirteen" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show"/>

                    <field name="months" optional="show"/>
                    <field name="invoice_status" optional="show"/>
                    <field name="invoice_state" optional="show"/>
                </tree>
              </field>
        </record>

        <!-- Tree view ends here -->

        <!-- Form view-->
        <record id="new_account_bonus_report_form_view" model="ir.ui.view">
          <field name="name">new.account.bonus.report.form</field>
          <field name="model">new.account.bonus.report</field>
          <field name="priority">20</field>
          <field name="arch" type="xml">
              <form create="false" edit="false" delete="false">
                  <sheet>
                      <group>
                            <group>
                                <field name="customer"/>
                                <field name="business_development"/>
                                <field name="key_account"/>
                                <field name="sale_order_id"/>
                                <field name="invoice_date" widget="date"/>
                            </group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="months"/>
                                <field name="invoice_status"/>
                                <field name="invoice_state"/>
                                <field name="date_of_first_order"/>
                            </group>
                      </group>
                  </sheet>
              </form>
          </field>
        </record>

        <!-- Form view ends here -->


        <!-- Popup code -->
        <record id="new_account_bonus_report_popup_view" model="ir.ui.view">
            <field name="name">New Account Bonus Report</field>
            <field name="model">popup.new.account.bonus.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="business_development"/>
                        </group>
                        <group>
                            <field name="key_account"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Popup code ends here-->


        <!-- Action code -->
        <record id="action_new_account_bonus_report" model="ir.actions.act_window">
            <field name="name">New Account Bonus Report</field>
            <field name="res_model">popup.new.account.bonus.report</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="new_account_bonus_report_popup_view"/>
            <field name="target">new</field>
            <field name="context">{'valuation': True}</field>
        </record>

        <!-- Action code ends here -->

        <!-- Export popup code -->
        <record id="export_new_account_by_month_by_bd_popup" model="ir.ui.view">
            <field name="name">new.account.bonus.report.export.popup</field>
            <field name="model">new.account.bonus.report.export</field>
            <field name="arch" type="xml">
                <form string="Export New Account Bonus Report">
                    <group>
                        <group>
                            <field name="business_development"/>
                        </group>
                        <group>
                            <field name="key_account"/>
                        </group>
                    </group>
                    <div>Click On ' Export To File ' button to export New Account Bonus Report file</div>
                    <footer>
                        <button name="download_excel_bd_new_account" string="Export To File" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Export popup code ends here -->

        <!-- Filter's code -->
        <record id="new_account_by_month_by_bd_filter" model="ir.ui.view">
            <field name="name">new.account.bonus.report.filter</field>
            <field name="model">new.account.bonus.report</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="customer"/>
                    <field name="business_development"/>
                    <field name="customer_business_development" invisible="1"/>
                    <field name="key_account"/>
                    <field name="customer_key_account" invisible="1"/>
                    <field name="invoice_state"/>
                    <group expand="0" string="Group By">
                        <filter name="customer" string="Customer Name" domain="[]" context="{'group_by':'customer'}"/>
                        <filter name="customer_business_development" string="Business Development" domain="[]" context="{'group_by':'customer_business_development'}"/>
                        <filter name="customer_key_account" string="Key Account" domain="[]" context="{'group_by':'customer_key_account'}"/>
                        <filter name="invoice_state" string="Status" domain="[]" context="{'group_by':'invoice_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Filter's code ends here -->

        <!-- Export Action code -->
        <!--<act_window name="Export New Account Bonus Report"
                    res_model="new.account.bonus.report.export"
                    src_model="new.account.bonus.report"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"
                    id="new_account_by_month_by_bd_export_act_window"/>-->

        <record id="new_account_bonus_report_export_act_window" model="ir.actions.act_window">
            <field name="name">Export New Account Bonus Report</field>
            <field name="res_model">new.account.bonus.report.export</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
             <field name="binding_model_id" ref="model_new_account_bonus_report" />
        </record>

        <!-- Export Action code ends here -->

        <!-- Menus declaration -->
        <menuitem id="sale.new_account_bonus_report_menu"
                  name="New Account Bonus Report"
                  action="action_new_account_bonus_report"
                  parent="sale.menu_sale_report"
                  sequence="2"/>

                <!--parent="sale.menu_sale_report"-->

        <!-- Menus declaration ends here -->

    </data>
</odoo>