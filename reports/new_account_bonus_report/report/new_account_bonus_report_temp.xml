<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="new_account_bonus_report_test">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div>
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>New Account Bonus Report</h4>
                                <h4 t-if="date">
                                   Date Range: <span t-esc="date"/>
                               </h4>
                            </b>
                        </center>
                    </div>
                        <table class="table table-sm" style="border: 1px solid black;">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid black;text-align:  center !important;">
                                        Customer Name
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Business Development
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Sale Order#
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Invoice Date
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Total
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Months Ago First Order
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="accounts" t-as="account" style="page-break-inside: avoid">
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.customer.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.business_development.partner_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.sale_order_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.date_invoice" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.amount_total"  t-options='{"widget": "monetary","display_currency": account.currency_id}'/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.months"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="account.invoice_status"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </page>
            </t>
        </t>
    </template>
</odoo>