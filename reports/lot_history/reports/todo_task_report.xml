<odoo>

    <report id="action_todo_model_report"
            string="Lot History"
            model="stock.production.lot"
            report_type="qweb-html"
            file="lot_history.purchase_report"
            name="lot_history.purchase_report"
    />

    <template id="purchase_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">

                        <center>
                            <b>
                                <h4>Surgical Product Solutions</h4>
                            </b>
                            <b>
                                <h2>Lot History</h2>
                            </b>
                        </center>
                        <center>
                            <!--<b>Date Range:-->
                                <!--<span t-esc="start_date"/>-->

                                 <!-- - -->

                                <!--<span t-esc="end_date"/>-->
                            <!--</b>-->
                        </center>
                        <!-- Report page content -->

                            <table class="table table-condensed table-bordered" style="border: 1px solid black;">
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align: center;">Lot</th>
                                    <th style="border: 1px solid black;text-align: center;">SKU/Catalog No</th>
                                    <th style="border: 1px solid black;text-align: center;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;">Product Type</th>
                                    <th style="border: 1px solid black;text-align: center;">Qty</th>
                                    <th style="border: 1px solid black;text-align: center;">Creation date</th>
                                    <th style="border: 1px solid black;text-align: center;">Vendor</th>
                                    <th style="border: 1px solid black;text-align: center;">Phone</th>
                                    <th style="border: 1px solid black;text-align: center; width: 220px;">Email</th>
                                </tr>


                                    <t t-foreach="data" t-as="o">
                                        <tr>

                                             <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.name"/>
                                            </td>

                                            <td  align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.pr_sku"/>
                                            </td>

                                            <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.pr_name"/>
                                            </td>
                                            <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.pr_type"/>
                                            </td>
                                             <td align="right" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.p_qty"/>
                                            </td>
                                            <td align="center" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.cr_date"/>
                                            </td>
                                            <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.vend"/>
                                            </td>
                                            <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.ph"/>
                                            </td>
                                            <td align="left" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o.email"/>
                                            </td>


                                        </tr>
                                    </t>

                            </table>
                        </div>

                </page>
            </t>
        </t>
    </template>

</odoo>