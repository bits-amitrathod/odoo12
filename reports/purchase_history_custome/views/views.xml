<odoo>
  <data>
      <record model="ir.ui.view" id="form_list">
          <field name="name">purchase.history.view.list</field>
          <field name="model">purchase.order.line</field>
          <field name="priority">20</field>
          <field name="arch" type="xml">
              <tree create="false" edit="false" delete="false">
                  <field name="order_name" string="Purchase Order#"/>
                  <field name="sku"/>
                  <!--<field name="manufacturer_rep"/>-->
                  <field name="vendor"/>
                  <field name="product_name"/>
                  <field name="qty"/>
                  <field name="product_uom"/>
                    <field name="date_done" widget="date"/>
                  <field name="minExpDate" widget="date"/>
                  <field name="maxExpDate" widget="date"/>
                     <field name="product_unit_price" widget="monetary"/>
                   <field name="product_offer_price" widget="monetary" />
                   <field name="delivered_product_retail_price" widget="monetary" sum="Total Retail Price"/>
                   <field name="delivered_product_offer_price" widget="monetary"  sum="Total Offer Price"/>
                  <field name="currency_id" invisible="1"/>
              </tree>
          </field>
      </record>

      <record id="form_cust_view" model="ir.ui.view">
             <field name="name">purchase.form.view.cust</field>
              <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="order_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sku"/>
                                <field name="vendor"/>
                                  <field name="product_id"/>
                            <field name="price_subtotal" widget="monetary" string="Total"/>
                                <field name="date_done" widget="date"/>
                            </group>
                            <group>
                               <field name="product_unit_price" widget="monetary"/>
                           <field name="product_offer_price" widget="monetary" />
                           <field name="delivered_product_retail_price" widget="monetary"/>
                           <field name="delivered_product_offer_price" widget="monetary" />
                                <field name="minExpDate" widget="date"/>
                                  <field name="maxExpDate" widget="date"/>
                                     <field name="product_uom"/>
                                <field name="currency_id"  invisible="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>




      <record id="view_stock_quantity_history" model="ir.ui.view">
        <field name="name">Purchase History Report</field>
        <field name="model">popup.view.model.purchase.history</field>
        <field name="arch" type="xml">
            <form string="Purchase History">
                <group>
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="product_id" widget="many2many_tags" />
                    </group>
                    <group>
                         <field name="vendor_id"  />
                         <field name="contract_id"  />
                    </group>

                </group>
                <footer>
                    <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_stock_quantity_history" model="ir.actions.act_window">
        <field name="name">Purchase History Report</field>
        <field name="res_model">popup.view.model.purchase.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_quantity_history"/>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_history_report"
            action="action_stock_quantity_history"
            name="Purchase History"
            parent="purchase.purchase_report"
            sequence="4"/>
  </data>
</odoo>