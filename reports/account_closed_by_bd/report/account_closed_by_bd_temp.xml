<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bd_account_closed_temp_test">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div>
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Revenue From Accounts Closed In 12 Months By BD</h4>
                                <h4 t-if="date">
                                   Date Range: <span t-esc="date"/>
                               </h4>
                            </b>
                        </center>
                    </div>
                        <table class="table table-sm" style="border: 1px solid black;">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 15%;">
                                        Sale Order#
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;">
                                        Customer Name
                                    </th>
                                    <!--<th style="border: 1px solid black;text-align:  center !important;width: 8%;">-->
                                        <!--Salesperson-->
                                    <!--</th>-->
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Business Development
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Delivery Date
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Status
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sales" t-as="sale" style="page-break-inside: avoid">
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.sale_order_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.customer.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.business_development.partner_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.delivery_date" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.state"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.total_amount" t-options='{"widget": "monetary","display_currency": sale.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </page>
            </t>
        </t>
    </template>
</odoo>