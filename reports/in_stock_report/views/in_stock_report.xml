<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_in_stock_report_line_tree" model="ir.ui.view">
        <field name="name">report.in.stock.report.tree</field>
        <field name="model">report.in.stock.report</field>
        <field name="arch" type="xml">
            <control>
                <button name="action_download_file" class="btn-link" type="object" string="Export"/>
            </control>
            <tree create="false" edit="false" delete="false" string="In Stock Report">
                <field name="partner_id" optional="show"/>
                <field name="product_brand_id" optional="show"/>
                <field name="sku_code" string="Product SKU" optional="show"/>
                <field name="product_id" string="Product Name" optional="show"/>
                <field name="actual_quantity" optional="show"/>
                <field name="uom_id" string="Product UOM" optional="show"/>
                <field name="price_list" widget="monetary" optional="show"/>
                <field name="currency_id"  invisible="1" optional="show"/>
                <field name="min_expiration_date" optional="show"/>
                <field name="max_expiration_date" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="action_popup_in_stock_report" model="ir.actions.act_window">
        <field name="name">In Stock Report</field>
        <field name="res_model">popup.report.in.stock.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="popup_view_in_stock_report" model="ir.ui.view">
        <field name="name">In Stock Report</field>
        <field name="model">popup.report.in.stock.report</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="saleforce_ac"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="sku_code"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product menu-->
    <menuitem name="In Stock Report" id="menu_procurement_partner_contact_in_stock_report_for_inv"
              action="action_popup_in_stock_report"
              parent="stock.menu_warehouse_report" sequence="5"/>
     <menuitem name="In Stock Report" id="menu_procurement_partner_contact_in_stock_report_for_sale"
              action="action_popup_in_stock_report"
              parent="sale.menu_sale_report" sequence="15"/>
</odoo>
