<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ka_revenue_temp_test">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div>
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Revenue By Key Account</h4>
                                <h4 t-if="date">
                                   Date Range: <span t-esc="date"/>
                               </h4>
                            </b>
                        </center>
                    </div>
                        <table class="table table-sm" style="border: 1px solid black;">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid black;text-align:  center !important;">
                                        Customer Name
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Key Account
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 15%;">
                                        No. of orders
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 15%;">
                                        Order Quota
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 15%;">
                                        Progress of Order Quota
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Total Revenue
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Revenue Quota
                                    </th>
                                    <th style="border: 1px solid black;text-align:  center !important;width: 8%;">
                                        Progress of Revenue Quota
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sales" t-as="sale" style="page-break-inside: avoid">
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.customer.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.key_account.name"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.no_of_orders"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.order_quota"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="round(sale.progress_order_quota, 2)"/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.total_revenue" t-options='{"widget": "monetary","display_currency": sale.currency_id}'/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="sale.revenue_quota" t-options='{"widget": "monetary","display_currency": sale.currency_id}'/>
                                    </td>
                                    <td style="border: 1px solid black;text-align: center;">
                                        <span t-esc="round(sale.progress_revenue_quota, 2)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </page>
            </t>
        </t>
    </template>
</odoo>