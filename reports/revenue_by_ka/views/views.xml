<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="revenue_by_ka_dashboard_view" model="ir.ui.view">
            <field name="name">ka.revenue.view.dashboard</field>
            <field name="model">report.ka.revenue</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="graph" ref="revenue_by_ka.revenue_ka_graph_view"/>
                    <group>
                        <group>
                                <!--<aggregate name="leads" string="Leads" group_operator="count_distinct" field="id" measure="__count__"/>-->
                                <!--<aggregate name="days_to_convert" string="Days To Opportunity" group_operator="avg" field="days_to_convert"/>-->
                                <!--<aggregate name="days_to_assign" string="Days to Assign" field="day_open" group_operator="avg" value_label="day(s)"/>-->
                                <formula name="progress_revenue_quota" string="% Revenue Quota" value="record.total_revenue / record.revenue_quota" widget="percentage"/>
                                <!--<aggregate name="planned_revenue" string="Expected Revenue" field="planned_revenue"-->
                                <!--group_operator="sum" widget="monetary"/>-->
                                <!--<aggregate name="expected_revenue" string="Prorated Revenue" field="expected_revenue" group_operator="sum" widget="monetary"/>-->
                                <!--<aggregate name="day_close" string="Days to Close" field="day_close" group_operator="avg" value_label="day(s)"/>-->
                                <!--<aggregate name="opportunities" string="Opportunities" field="id" domain="[('type','=','opportunity')]" group_operator="count" invisible="1"/>-->
                        </group>
                        <!--<group>-->
                            <!--<widget name="pie_chart" title="Sales Teams" attrs="{'groupby': 'team_id'}"/>-->
                            <!--<widget name="pie_chart" title="Medium" attrs="{'groupby': 'medium_id'}"/>-->
                        <!--</group>-->
                    </group>
                    <view type="pivot" ref="revenue_by_ka.revenue_ka_pivot_view"/>
                </dashboard>
            </field>
        </record>
        <record model="ir.ui.view" id="revenue_ka_graph_view">
            <field name="name">ka.revenue.view.graph</field>
            <field name="model">report.ka.revenue</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="Revenue by KA" orientation="horizontal" stacked="True" type="bar">
                    <field name="key_account" type="row"/>
                    <field name="total_revenue" type="measure" string="Revenue"/>
                </graph>
            </field>
        </record>

        <record id="revenue_ka_pivot_view" model="ir.ui.view">
            <field name="name">ka.revenue.view.pivot</field>
            <field name="model">report.ka.revenue</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Revenue by KA">
                    <field name="key_account" type="row"/>
                    <field name="no_of_orders" type="measure"/>
                    <field name="order_quota" type="measure"/>
                    <field name="progress_order_quota" type="measure"/>
                    <field name="total_revenue" type="measure"/>
                    <field name="revenue_quota" type="measure"/>
                    <field name="progress_revenue_quota" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Tree view -->
        <record model="ir.ui.view" id="revenue_by_ka_list_view">
              <field name="name">revenue.by.ka.view.list</field>
              <field name="model">report.ka.revenue</field>
              <field name="priority">20</field>
              <field name="arch" type="xml">
                  <tree create="false" edit="false" delete="false">
                        <field name="currency_id" invisible="1"/>
                        <field name="customer"/>
                        <field name="key_account"/>
                        <field name="no_of_orders"/>
                        <field name="order_quota"/>
                        <field name="progress_order_quota"/>
                        <field name="total_revenue" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="revenue_quota" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="progress_revenue_quota"/>
                    </tree>
              </field>
        </record>

        <!-- Tree view ends here -->

        <!-- Form view-->
        <record id="revenue_by_ka_form_view" model="ir.ui.view">
          <field name="name">report.revenue.by.ka.form</field>
          <field name="model">report.ka.revenue</field>
          <field name="priority">20</field>
          <field name="arch" type="xml">
              <form create="false" edit="false" delete="false">
                  <sheet>
                      <group>
                            <group>
                                <field name="customer"/>
                                <field name="key_account"/>
                            </group>
                      </group>
                      <group>
                          <group>
                              <field name="no_of_orders"/>
                              <field name="order_quota"/>
                              <field name="progress_order_quota"/>
                          </group>
                          <group>
                              <field name="currency_id" invisible="1"/>
                              <field name="total_revenue" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                              <field name="revenue_quota" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                              <field name="progress_revenue_quota"/>
                          </group>
                      </group>
                  </sheet>
              </form>
          </field>
        </record>

        <!-- Form view ends here -->


        <!-- Popup code -->
        <record id="ka_revenue_popup_view" model="ir.ui.view">
            <field name="name">Revenue By Key Account</field>
            <field name="model">popup.ka.revenue</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <group>
                            <field name="start_month"/>
                            <field name="start_year"/>
                        </group>
                        <group>
                            <field name="end_month"/>
                            <field name="end_year"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="key_account"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Popup code ends here-->


        <!-- Action code -->
        <record id="action_revenue_by_ka" model="ir.actions.act_window">
            <field name="name">Revenue By Key Account</field>
            <field name="res_model">popup.ka.revenue</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ka_revenue_popup_view"/>
            <field name="target">new</field>
            <field name="context">{'default_compute_at_date': 0, 'valuation': True}</field>
        </record>

        <!-- Action code ends here -->

        <!-- Export popup code -->
        <record id="export_revenue_by_ka_popup" model="ir.ui.view">
            <field name="name">report.revenue.by.ka.export.popup</field>
            <field name="model">report.ka.revenue.export</field>
            <field name="arch" type="xml">
                <form string="Export Revenue By Key Account Report">
                    <group>
                        <group>
                            <field name="compute_at_date" widget="radio"/>
                            <field name="start_date" attrs="{'invisible': [('compute_at_date', '=', 0)], 'required' : [('compute_at_date', '=', 1)]}"/>
                            <field name="end_date" attrs="{'invisible': [('compute_at_date', '=', 0)], 'required' : [('compute_at_date', '=', 1)]}"/>
                        </group>
                        <group>
                            <field name="key_account"/>
                        </group>
                    </group>
                    <div><b>Click On ' Export To File ' button to export Revenue By Key Account report file</b></div>
                    <footer>
                        <button name="download_excel_ka_revenue" string="Export To File" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Export popup code ends here -->

        <!-- Filter's code -->
        <record id="revenue_by_ka_filter" model="ir.ui.view">
            <field name="name">revenue.by.ka.filter</field>
            <field name="model">report.ka.revenue</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="key_account"/>
                    <field name="customer"/>
                    <group expand="0" string="Group By">
                        <!--<filter name="key_account" string="Key Account" domain="[]" context="{'group_by':'key_account'}"/>-->
                    </group>
                </search>
            </field>
        </record>

        <!-- Filter's code ends here -->

        <!-- Export Action code -->
        <act_window name="Export Revenue By Key Account Report"
                    res_model="report.ka.revenue.export"
                    src_model="report.ka.revenue"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"
                    id="revenue_by_ka_export_act_window"/>

        <!-- Export Action code ends here -->

        <!-- Menus declaration -->
        <menuitem id="sale.revenue_by_ka_menu"
                  name="Revenue By KA"
                  action="action_revenue_by_ka"
                  parent="stocked_product_sold_by_ka.key_account_reports"
                  sequence="14"/>

                <!--parent="sale.menu_sale_report"-->

        <!-- Menus declaration ends here -->

    </data>
</odoo>