<odoo>
    <template id="stockhawk_spreadsheet_view" name="Stockhawk Spreadsheet">
        <t t-name="website.terms_of_sales">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty"/>
                <section class="about-us-section">
                  <t t-name="Spreadsheet">
                      <html>
                          <head>
                              <link href="/stockhawk_spreadsheet/static/src/css/xspreadsheet.css" rel="stylesheet"/>
                              <link href="/stockhawk_spreadsheet/static/src/css/xspreadsheet.css.map" rel="stylesheet"/>
                              <link href="/stockhawk_spreadsheet/static/src/css/xspreadsheet.js.map" rel="stylesheet"/>
                              <script type="text/javascript" src="/stockhawk_spreadsheet/static/src/js/xspreadsheet.js"></script>
                              <script type="text/javascript" src="/stockhawk_spreadsheet/static/src/js/custom_spreadsheet.js"></script>

                              <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"></link>
                              <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                              <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>-->
                          </head>
                          <body onload='load()'>
                              <div style="position: fixed; right: 0; top: .7em;">
                              </div>
                              <br></br>
                              <center>
<!--                                  <img src="/stockhawk_spreadsheet/static/src/images/StockHawk_Logo_TM_R1.png" class="img-fluid"/>-->
                                <img src="/stockhawk_spreadsheet/static/src/images/Stockhawk_Rapid_Order_R1.png" class="img-fluid"   style=" max-width: 30%;" /> </center>
                                <div class="container">
<!--                                  <center style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 25px;">Rapid Quote</center>-->
                                <center style="padding-top: 15px; padding-bottom: 14px;"> <span style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 20px;">
                                    Let Stockhawk instantly generate your order.
                                </span></center>
                                  <span style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 15px;">
                                      Copy (Ctrl+C) and Paste (Ctrl+V) your product information into the spreadsheet below.
                                      Update the QTY fields with your desired order amount,
                                      and whether you want to purchase single units (EA) or boxes (BX).
                                      Submit and allow 30 seconds to see your Order! Your products will be reserved on the Order for 15 minutes.

                                </span>
                              </div>
                              <!--loader-->
                                <div id="loader1" style="display: none;">
                                    <span id="loader" class="loader" ></span>
<!--                                    <h4 style="text-align:center;top:   63% !important;border-top: 42px !important;margin: 8% !important;position: absolute;right: 24%;z-index: 11;filter: drop-shadow(2px 4px 6px black);display: block;/*! margin: 0px auto; */">Please wait while we process your Rapid Quote</h4>-->
                                    <h4 style="text-align:center;top:   63% !important;border-top: 42px !important;margin: 8% !important;position: absolute;right: 24%;z-index: 11; display: block;/*! margin: 0px auto; */">Please wait while we process your Rapid Order</h4>
                              </div>
                              <!-- The Modal -->
                                <div class="modal" tabindex="-1" id="help" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                              <h4 class="modal-title">Rapid Order Help</h4>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                              <div class="container">
                                                <span style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 15px;">
                                                    <h4>Tips for using Stockhawk Rapid Order:</h4>
                                                    <ul style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 15px;">

                                                        <li style="margin:5px">Enter the product code or manufacturer product number in the SKU column.</li>
                                                        <li style="margin:5px">Specify the exact number of products you are looking for in the QTY column. You will be able to decrease the quantity (not increase) after your order has been generated.</li>
                                                        <li style="margin:5px">Indicate whether you are looking for single units (EA) or boxes (BX) in the UOM column.</li>
                                                        <li style="margin:5px">Once you submit your sheet, please allow 30 seconds for our system to generate a order.</li>
                                                        <li style="margin:5px">After receiving your order, you will then be able to decrease quantities, see total QTY available, pay, and add notes prior to placing your order.</li>
                                                        <li style="margin:5px">Your order will only return with products/QTYs we can fill that are within your expiration date tolerance. If you want 5 of a product, but we only have 3 in stock your order will only partially fill your order.</li>
                                                        <li style="margin:5px">If we cannot fill any of your order you will receive a popup notifying you that we are out of stock. </li>
                                                        <li style="margin:5px">Products on your order will be reserved for 15 minutes. After 15 minutes your order will automatically cancel if you do not accept it. </li>
                                                        <li style="margin:5px">If you do not wish to purchase products on your order,please remove the line items before accepting.</li>
                                                        <li style="margin:5px">If you do not want to proceed with the order, please reject it as soon as possible.</li>
                                                    </ul>
                                                    <b>Note:</b> <i>Unless you update the Rapid Order sheet, Stockhawk will automatically generate orders for one (1) item, sold as an individual unit/each (EA).</i>
                                                </span>
                                            </div>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" id="helpClose" class="btn btn-primary abc ml" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                  </div>
                                <div class="modal" id="paste" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                              <h4 class="modal-title">Rapid Order Paste Help</h4>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                              <div class="container">
                                                <span style="color: rgb(50, 61, 73); font-family: &quot;Open Sans&quot;, sans-serif; font-size: 15px;">
                                                   These actions are unavailable, Please use: <b>Ctrl+C</b> for copy and <b>Ctrl+V</b> for paste.
                                                </span>
                                            </div>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" id="helpClose" class="btn btn-primary abc ml" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                              </div>
                                <div class="modal" id="myModal" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                              <h4 class="modal-title">Rapid Order</h4>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                              You are about to submit your Rapid Order. Please verify all information is correct. By clicking “Yes” you will be redirected to a loading page while your
                                                submission is processed.
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" id="myModalOK" class="btn btn-primary abc ml" data-bs-dismiss="modal">Yes</button>
                                                <button type="button" id="myModalClose" class="btn btn-primary abc ml" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                  </div>
                                <div class="modal" id="errorModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                              <h4 class="modal-title">Rapid Order</h4>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body" id="errorMessageDisplay">

                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" id="errorModalOK" class="btn btn-primary abc ml" data-bs-dismiss="modal">Ok</button>
                                                <button type="button" id="errorModalClose" class="btn btn-primary abc ml" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                  </div>
                              <center>
                                  <div class="text-right spreadsheet">
                                    <button style="justify-content: center; margin-top:15px;" type="button" class="btn btn-primary abc ml" data-bs-toggle="modal" data-bs-target="#help"> Info </button>
                                    <button id="pastemod" hidden="hidden" style="justify-content: center;" type="button" class="btn btn-primary abc ml" data-bs-toggle="modal" data-bs-target="#paste"> paste </button>
                                  </div>
                                  <div class="spreadsheet mb-5" id="x-spreadsheet-demo"></div>
                              </center>

                          </body>
                      </html>
                  </t>
                </section>
            </t>
        </t>
    </template>
    <template id="stockhawk_spreadsheet_link" name="Link to frontend portal" inherit_id="portal.user_dropdown">
        <xpath expr="//a[@id='o_logout']" position="before">
            <t t-set="user" t-value="request.env['res.users'].sudo().search([('id', '=', request.session.uid)])"/>
                <t t-if="user.partner_id.active and user.partner_id.prioritization and user.partner_id.on_hold != True">
                    <div class="menu-rapid-quote-div">
                        <a style="padding: 4px px 1px 0px;" href="/spreadsheet/stockhawk_spreadsheet" role="menuitem" class="dropdown-item ">Stockhawk Rapid Order</a>
                    </div>
                </t>
        </xpath>
    </template>
</odoo>