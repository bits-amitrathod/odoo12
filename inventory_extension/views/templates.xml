                                attrs="{'invisible': [('is_mark_all_button_visible', '=', False)]}"
                                type="object"
                                string="Mark All Done" id="warn_btn"/>
                    </xpath>-->


                    <!-- Rearrange Validate button at first and revert back changes -->
                    <!--
                                        &lt;!&ndash; Remove the original 'Validate' button &ndash;&gt;
                                        <xpath expr="//header/button[@name='button_validate']" position="replace"/>

                                        &lt;!&ndash; changed position of Validate button after Mark all done button in PICK&ndash;&gt;
                                        <xpath expr="//header/button[@name='action_button_mark_all_done']" position="after">
                                            <button name="button_validate"
                                                    attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False)]}"
                                                    string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user"
                                                    data-hotkey="v"/>
                                        </xpath>


                                        &lt;!&ndash; Remove the original 'Validate' button &ndash;&gt;
                                        <xpath expr="//header/button[@name='button_validate']" position="replace"/>

                                        &lt;!&ndash; changed position of Validate button after Mark all done button in PULL and OUT&ndash;&gt;
                                        <xpath expr="//header/button[@name='action_button_mark_all_done']" position="after">
