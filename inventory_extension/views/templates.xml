            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <!--Rename the set quantity button as Mark all done -->
                    <xpath expr="//button[@name='action_set_quantities_to_reservation']" position="attributes">
                        <attribute name="string">
                            Mark all Done
                        </attribute>
                    </xpath>


                    <!-- As per client requirement client want to remove MARK ALL DONE button and Renamed SET QUANTITY button as Mark all button -->

                    <!--  <xpath expr="/form/header/button[last()]" position="after">
                        <field name="is_mark_all_button_visible" invisible="1"/>
