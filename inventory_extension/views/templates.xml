                    <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                        <field name="acq_user_id"/>
                    </xpath>
                    <xpath expr="/form/sheet/group/group/field[@name='picking_type_id']" position="replace">
                        <field name="picking_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="/form/sheet/group/group[2]/field[@name='owner_id']" position="replace">
                        <field name="owner_id" string="Owner" groups="stock.group_tracking_owner"/>
                    </xpath>
                    <xpath expr="//div[hasclass('oe_title')]" position="after">
                        <div class="center mt8" attrs="{'invisible': [('picking_warn_msg', '=', False)]}">
                            <h3 style="text-align: left; color: #c4262e;">
                                <field name="picking_warn_msg"></field>
                            </h3>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="vpicktree_inherit1" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='location_dest_id']" position="after">
                    <field name="acq_user_id"/>
                </xpath>
            </field>
        </record>

