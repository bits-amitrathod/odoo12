<odoo>
    <data>

        <template id="assets_backend" inherit_id="web.assets_backend" name="pick Popup">
        <xpath expr='.' position="inside">
            <link type="text/css" rel='stylesheet' href='/inventory_extension/static/src/css/pick_popup.css'/>
            <script type="text/javascript" src="/inventory_extension/static/src/js/pick_popup.js"></script>
        </xpath>
    </template>

        <record id="view_picking_form_mark_all_button1" model="ir.ui.view">
            <field name="name">stock.picking.form.mark.all.button</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/header/button[last()]" position="after">
                        <field name="is_mark_all_button_visible" invisible="1"/>
                        <button name="action_button_mark_all_done"  attrs="{'invisible': [('is_mark_all_button_visible', '=', False)]}"
                                type="object"
                                string="Mark All Done" id="warn_btn"/>
                        <button name="action_button_manual_reservation"  attrs="{'invisible': [('picking_type_id', '!=', 1)]}"
                                type="object"
                                string="Manual Reservation" id="warn_btn"/>
                    </xpath>
                    <xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
                        <field name="acq_user_id"/>
                    </xpath>
                    <xpath expr="/form/sheet/group/group/field[@name='picking_type_id']" position="replace">
                        <field name="picking_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="/form/sheet/group/group[2]/field[@name='owner_id']" position="replace">
                        <field name="owner_id" string="Owner" groups="stock.group_tracking_owner"/>
                    </xpath>
                    <xpath expr="//div[hasclass('oe_title')]" position="after">
                        <div class="center mt8" attrs="{'invisible': [('picking_warn_msg', '=', False)]}">
                        <h3 style="text-align: left; color: #c4262e;">
                          <field name="picking_warn_msg"></field>
                        </h3>
                    </div>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="vpicktree_inherit1" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='location_dest_id']" position="after">
                    <field name="acq_user_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>