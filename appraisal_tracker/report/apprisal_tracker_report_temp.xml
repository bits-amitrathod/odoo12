<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="appraisal_tracker_report" >
        <t t-call="web.html_container">
            <t t-call="web.external_layout" >
                <page>
                    <div class="oe_structure"/>
                    <div>
                        <center>
                            <b>
                                <h2> Surgical Product Solutions </h2>
                                <h4> Appraisal Tracker</h4>
                            </b>
                        </center>
                        <center>
                        </center>
                    </div>
                    <br/>
                    <table class="table table-sm" style="border: 1px solid black; " >
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Appraisal No#</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Acq Manager</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Facility</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Type</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">PO#</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Payment Terms</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Total Offer</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Total Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Billed Total Offer</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Final Billed Total Offer</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Billed Total Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Final Billed Total Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Ship ping Label Issu ed</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Shipping Date</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Delivered Date</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Arrival Date</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Tier 1 Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Tier 2 Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">&lt; 40% Retail</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">New Cust omer</th>
                                    <th style="border: 1px solid black;text-align: center;width: 5%;">Status</th>

                                </tr>
                                </thead>
                         <tbody>
                                    <tr t-foreach="data" t-as="order" style="page-break-inside: avoid;">
                                        <td style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.appraisal_no"/>
                                        </td>

                                        <td style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.acq_user_id.name"/>
                                        </td>
                                        <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.partner_id.name"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.cust_type_appraisal"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.name"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.payment_term_id.name"/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.amount_total"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                          <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.rt_price_total_amt"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                         <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.billed_offer_total"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.final_billed_offer_total"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                          <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.billed_retail_total"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.final_billed_retail_total"  t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.shipping_label_issued"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.shipping_date"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.delivered_date"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.arrival_date_grp"/>
                                        </td>

                                         <td  style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.tier1_retail" t-options='{"widget": "monetary", "display_currency": order.currency_id}' />
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.tier2_retail" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                            <span t-esc="order.less_than_40_retail" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.new_customer"/>
                                        </td>
                                         <td  style="border: 1px solid black;width: 5%;">
                                             <span t-esc="order.status_ven_app"/>
                                        </td>
                                    </tr>
                             </tbody>
                    </table>

                </page>
            </t>
        </t>
    </template>
</odoo>
