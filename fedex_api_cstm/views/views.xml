        <record id="sale_order_form_view_vendor_track_shipment1" model="ir.ui.view">
            <field name="name">purchase.order.vendor.form.track.shipment</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="vendor_offer.view_vendor_offer_form"/>
            <field name="arch" type="xml">
                <button name="action_cancel_vendor_offer" position="after">
                    <field name="carrier_id" invisible="1"/>
                    <field name="status_ven" invisible="1"/>
<!--                    <button string="Track Shipment"-->
<!--                            type="object" class="btn-primary"-->
