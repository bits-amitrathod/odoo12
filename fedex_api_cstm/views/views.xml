<odoo>
    <data>
        <record id="cstm_popup_message" model="ir.ui.view">
            <field name="name">cstm.popup.message</field>
            <field name="model">cstm.popup.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <field name="name"/>
                    <footer>
                        <button string="OK" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="tracing_number_popup" model="ir.ui.view">
            <field name="name">Select Tracking Number</field>
            <field name="model">tracking.popup</field>
            <field name="arch" type="xml">
                <form string="Select Tracking Number">
                    <group>
                        <group>
                           <field name="tracking_number"/>
                        </group>
                        <group>
                            <button name="track_fedex" string="Track on Fedex" type="object" class="btn-default" invisible="not context.get('isFedEx', True)" attrs="{'invisible': [('tracking_number', '==', False)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="Track" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

