                    <button string="Track Shipment"
                            type="object" class="btn-primary"
                            name="action_fedex_track_request"
                            attrs="{'invisible': ['|',('carrier_id', '==', False),('shipping_number', '==', False)]}"
                            groups="stock.group_stock_user"/>
                </button>
            </field>
        </record>

        <record id="purchase_order_form_track_shipment1" model="ir.ui.view">
            <field name="name">purchase.order.form.track.shipment</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <button name="button_cancel" position="after">
                    <field name="carrier_id" invisible="1"/>
                    <field name="vendor_offer_data" invisible="1"/>
                    <button string="Track Shipment"
                            type="object" class="btn-primary"
                            name="action_fedex_track_request"
                            attrs="{'invisible': ['|',('carrier_id', '=', False),('vendor_offer_data', '=',  False)]}"
                            groups="stock.group_stock_user"/>
                </button>
            </field>
        </record>

