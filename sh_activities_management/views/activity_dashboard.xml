            	<t t-if="request.env.company.sh_display_all_activities_counter">
	                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col">
	                    <div class="card card_1 custom-card" href="#">
	                        <div class="sh-card-body dash1 badge-info">
	                            <div class="media">
	                                <i class="fa fa-clock-o fs-20 text-white align-self-center mr-3"></i>
	                                <div class="media-body text-white">
	                                    <h3 class="mt-0">
	                                        <t t-esc="all_activities_count" />
	                                    </h3>
	                                    <p>All Activities</p>
	                                </div>
	                                <input type="text" id="all_activity" t-att-value="all_activities" style="display: none;" />
	                            </div>
	                        </div>
	                    </div>
	                </div>
                </t>
                <t t-if="request.env.company.sh_display_planned_activities_counter">
