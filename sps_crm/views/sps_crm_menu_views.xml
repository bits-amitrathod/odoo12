    <menuitem
        id="crm.crm_lead_menu_my_activities"
        name="My Activities"
        parent="crm.crm_menu_sales"
        action="sh_activities_management.sh_action_my_activities"
        sequence="2"/>

    <menuitem name="Activity Dashboard" id="sh_activities_management.sh_activity_dashboard" parent="crm.crm_menu_root" sequence="1" groups="sh_activities_management.group_activity_user,sh_activities_management.group_activity_supervisor,sh_activities_management.group_activity_manager" />

    <menuitem id="sh_menu_activity_dashboard_sale"
