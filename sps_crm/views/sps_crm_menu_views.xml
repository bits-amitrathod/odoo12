    <menuitem
        id="crm.crm_menu_config"
        name="Configuration"
        parent="crm.crm_menu_root"
        sequence="25" groups="sales_team.group_sale_manager,purchase.group_purchase_manager"/>

    <menuitem
        id="menu_crm_config_purchase"
        name="Acquisition Pipeline"
        parent="crm.crm_menu_config"
        groups="purchase.group_purchase_manager"
        sequence="16"/>

    <menuitem
        id="menu_crm_purchase_stage_act1"
        name="Stages"
        parent="menu_crm_config_purchase"
        action="sps_crm.crm_purchase_stage_action"
