    <menuitem
        id="crm_menu_purchase"
        name="Acquisitions"
        parent="crm.crm_menu_root"
        groups="purchase.group_purchase_user,purchase.group_purchase_manager"
        sequence="3"/>

    <menuitem
        id="menu_crm_purchase_opportunities"
        name="My Pipeline"
        action="sps_crm.action_your_purchase_pipeline"
        parent="crm_menu_purchase"
        sequence="1"/>
    <menuitem
        id="my_vendor_offers_menu"
        name="My Vendor Offers"
        parent="crm_menu_purchase"
        action="vendor_offer.action_window"
        sequence="2"/>
