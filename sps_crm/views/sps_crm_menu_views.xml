        />

    <menuitem
        id="menu_crm_purchase_tag1"
        name="Tags"
        parent="menu_crm_config_purchase"
        action="sps_crm.crm_purchase_tag_action"
        sequence="1"/>

    <menuitem
        id="menu_crm_lost_reason_purchase1"
        name="Lost Reasons"
        parent="menu_crm_config_purchase"
        action="sps_crm.crm_purchase_lost_reason_action1"
        sequence="6"/>

