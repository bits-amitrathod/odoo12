        id="purchase_order_menu"
        name="My Purchase Orders"
        parent="crm_menu_purchase"
        action="vendor_offer.purchase_form_action_vendor"
        sequence="3"/>
    <menuitem
        id="crm_lead_menu_my_activities"
        name="My Activities"
        parent="crm_menu_purchase"
        action="sh_activities_management.sh_action_my_activities"
        sequence="4"/>

    <menuitem id="sh_menu_activity_dashboard"
              name="Dashboard"
              action="sh_activities_management.sh_action_activity_dashboard"
              parent="crm_menu_purchase" sequence="5" />

    <menuitem
        id="vendors_menu"
        name="Vendors"
        parent="crm_menu_purchase"
        action="account.res_partner_action_supplier"
        sequence="6"/>

    <menuitem id="menu_procurement_management_appraisal_tracker"
              name="Appraisal Tracker"
              parent="crm_menu_purchase"
              action="appraisal_tracker.action_window" sequence="7"/>

    <menuitem id="dashboard"
              name="Documents"
              parent="crm_menu_purchase"
              action="documents.document_action"
              sequence="8"/>


