<?xml version="1.0"?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.event.crm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <!--Replace lang id field removed unwanted attributes -->
            <xpath expr="//page[@name='lead']//field[@name='lang_id']" position="replace">
                <field name="lang_id" options="{'no_create': True}"/>
            </xpath>

            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="opportunity_type_sales"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="replace">
                <field name="oppr_category_id" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>

            <!-- client want to Hide -->
            <field name="lead_properties" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <!-- client want to Hide -->
            <button name="action_schedule_meeting" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>

            <xpath expr="//form[1]/header[1]/button[@name='iap_enrich'][2]" position="replace"/>
            <xpath expr="//form[1]/header[1]/button[@name='iap_enrich'][1]" position="replace"/>
            <!--  rearrangement Of Fields              -->
            <xpath expr="//form[1]/sheet[1]/group[1]/group[@name='opportunity_partner']/div[2]" position="after">
                <xpath expr="//form[1]/sheet[1]/group[1]/group[not(@name)][1]/field[@name='user_id']" position="move"/>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='lead']/group[1]/group[@name='Misc']/field[@name='team_id']"
                       position="move"/>
            </xpath>
            <xpath expr="//field[@name='oppr_category_id']" position="after">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='lead']/group[1]/group[@name='Misc']/field[@name='company_id']"
                       position="move"/>
                <field name="create_date"/>
            </xpath>

        </field>
    </record>

    <!-- this view used for only filed name change purpose   -->
    <record id="crm_lead_view_list_activities_string_chnage" model="ir.ui.view">
        <field name="name">crm.lead.list.activities.change</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <!--<field name="tag_ids" position="attributes">
                <attribute name="string">Tags</attribute>
            </field>-->
            <field name="my_activity_date_deadline" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <xpath expr="//field[@name='tag_ids']" position="replace">
                <field name="oppr_category_id" string="Tags" widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
</odoo>
