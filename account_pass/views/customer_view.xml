<?xml version="1.0"?>
<odoo>
	<record id="view_partners_account_pass_tab" model="ir.ui.view">
            <field name="name">view.res.partner.form.account.pass</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <data>
                    <div name="button_box" position="inside">
                          <button class="oe_stat_button o_res_partner_tip_opp" type="object"
                            name="action_account_pass"
                            icon="fa-star"
                            context="{'default_partner_id': active_id}" widget="statinfo">
                        <span>Account Pass</span>
                        </button>
                    </div>
                </data>
            </field>
        </record>
</odoo>