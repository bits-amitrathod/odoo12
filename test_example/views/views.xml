<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="test_example.list">
      <field name="name">test_example list</field>
      <field name="model">test_example.test_example</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="test_example.action_window">
      <field name="name">test_example window</field>
      <field name="res_model">test_example.test_example</field>
      <field name="view_mode">tree,form</field>
    </record>
    -->

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="test_example.action_server">
      <field name="name">test_example server</field>
      <field name="model_id" ref="model_test_example_test_example"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="test_example" id="test_example.menu_root"/>
    -->
    <!-- menu categories -->

    <menuitem name="Menu 1" id="test_example.menu_1" parent="test_example.menu_root"/>
    <menuitem name="Menu 2" id="test_example.menu_2" parent="test_example.menu_root"/>
    -->
    <!-- actions -->

    <menuitem name="List" id="test_example.menu_1_list" parent="test_example.menu_1"
              action="test_example.action_window"/>
    <menuitem name="Server to list" id="test_example" parent="test_example.menu_2"
              action="test_example.action_server"/>

  </data>
</odoo>