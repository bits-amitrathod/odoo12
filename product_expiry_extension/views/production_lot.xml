<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_production_lot_tree_cstm" model="ir.ui.view">
        <field name="name">stock.production.lot.tree</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree" />
        <field name="arch" type="xml">
          <field  name="product_id" position="after">
                <!--<field name="use_date" string="Expiration Date" />-->
                <field name="alert_date" invisible="True"  />
		        <field name="product_qty" />
              <field name="available_qty_for_sale" />
          </field>
          <tree  position="attributes" >
            <attribute name="decoration-danger">alert_date&lt;=current_date</attribute>
        </tree>
        </field>
    </record>

    <record id="search_product_lot_filter_inherit_product_Quantity" model="ir.ui.view">
        <field name="name">stock.production.lot.search.inherit.Quantity</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <!-- static filter  -->
                <filter string="Lot Quantity" name ="product_qty" domain="[('product_qty', '&gt;',0)]"/>
            </xpath>
        </field>
     </record>

    <record id="stock_production_lot_view_form_notebook_attr" model="ir.ui.view">
        <field name="name">stock.production.lot.notebook.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="product_expiry.view_move_form_expiry"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="attributes">
                <attribute name="attrs">{'invisible': 0}</attribute>
            </xpath>
        </field>
    </record>

