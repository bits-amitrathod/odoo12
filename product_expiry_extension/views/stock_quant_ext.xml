<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="view_stock_extension_quant_tree" model="ir.ui.view">
     <field name="name">stock.quant.tree</field>
     <field name="model">stock.quant</field>
     <field name="inherit_id" ref="stock.view_stock_quant_tree" />
     <field name="arch" type="xml">
        <field name="lot_id" position="after">
           <!-- <field name="use_date"/>-->
            <field name="use_date"  />
        </field>
      </field>
</record>
  <!-- Short/Extra tab added in receipts -->
  <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view_picking_form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='note']" position="after">
                <page string="Short/Extra" name="short/extra" attrs="{'invisible':[('picking_type_id','!=', 2)]}">
                    <group>
                            <field name="short" widget="html"/>
                            <field name="extra" widget="html"/>
                            <field name="short_date" widget="html"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>