<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_extension_quant_tree" model="ir.ui.view">
        <field name="name">stock.quant.tree</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">
                    removal_date &lt; current_date or quantity &lt; 0
                </attribute>
            </xpath>
            <field name="owner_id" position="after">
                <field name="removal_date"/>
                <field name="use_date"/>
            </field>
            <field name="product_uom_id" position="after">
                <field name="value" optional="show"/>
            </field>
            <field name="inventory_quantity" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
             <field name="inventory_diff_quantity" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
        </field>
    </record>
    <!-- Short/Extra tab added in receipts -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view_picking_form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='note']" position="after">
                <page string="Short/Extra" name="short/extra" attrs="{'invisible':[('picking_type_id','!=', 2)]}">
                    <group>
                        <field name="short" widget="html"/>
                        <field name="extra" widget="html"/>
                        <field name="short_date" widget="html"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>




</odoo>