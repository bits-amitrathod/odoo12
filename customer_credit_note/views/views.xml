<odoo>
    <data>

        <record id="account_move_tree_view_inherited" model="ir.ui.view">
            <field name="name">account.move.tree.view.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace"> </xpath>
                <xpath expr="//field[@name='payment_state']" position="before">
                     <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" optional="show"/>
                </xpath>
            </field>
        </record>


         <record id="invoice_form_credit_note_label_update" model="ir.ui.view">
            <field name="name">sps.account.invoice.form.inherit</field>
            <field name="model">account.move</field>
<!--            <field name="priority">10</field>-->
            <field name="inherit_id" ref="account.view_move_form"></field>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']/field[@name='payment_reference']" position="replace"/>
                <xpath expr="//group[@id='header_right_group']/field[@name='partner_bank_id']" position="replace"/>

                <group id="header_left_group" position="replace">
                    <group id="header_left_group">
                        <label for="partner_id" string="Customer" style="font-weight:bold;" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <label for="partner_id" string="Vendor" style="font-weight:bold;" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
                        <field name="partner_id" widget="res_partner_many2one" nolabel="1"
                               context="{'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False, 'show_address': 1, 'default_is_company': True, 'show_vat': True}"
                               domain="[('type', '!=', 'private'), ('company_id', 'in', (False, company_id))]"
                               options="{&quot;always_reload&quot;: True, &quot;no_quick_create&quot;: True}"
                               attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                        <label for="ref" string="Bill Reference" attrs="{'invisible':[('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
                        <field name="ref" nolabel="1" attrs="{'invisible':[('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
                        <field name="ref" attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'in_refund', 'out_invoice', 'out_refund'))]}"/>
                        <field name="payment_reference" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
<!--                        sps custom fields-->
                        <field name="preferred_method"/>
                        <field name="shipping_terms"/>
<!--                        ............................-->
                        <field name="partner_bank_id" context="{'default_partner_id': bank_partner_id}" domain="[('partner_id', '=', bank_partner_id)]" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))],                                             'readonly': [('state', '!=', 'draft')]}"/>
                        <label name="invoice_vendor_bill_id_label" for="invoice_vendor_bill_id" string="Auto-Complete" class="oe_edit_only" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('move_type', '!=', 'in_invoice')]}"/>
                        <field name="invoice_vendor_bill_id" nolabel="1" class="oe_edit_only" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('move_type', '!=', 'in_invoice')]}" domain="[('company_id', '=', company_id), ('partner_id','child_of', [partner_id]), ('move_type','=','in_invoice')]" placeholder="Select an old vendor bill" options="{'no_create': True}" context="{'show_total_amount': True}"/>

                        <field name="partner_shipping_id" groups="account.group_delivery_invoice_address" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))], 'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="quick_edit_total_amount" class="w-50" attrs="{'invisible': ['|', ('move_type', '=', 'entry'), ('quick_edit_mode', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>

                        <field name="tax_cash_basis_origin_move_id" attrs="{'invisible': [('tax_cash_basis_origin_move_id', '=', False)]}"/>
                    </group>
                </group>

                <xpath expr="//group[@id='header_right_group']/field[@name='invoice_date']" position="after">
                    <field name="invoice_date_due"/>
                    <field name="sale_margine"/>
                </xpath>
                <xpath expr="//group[@id='header_right_group']/div[@name='journal_div']" position="after">
                    <field name="expiration_date"/>
                    <field name="currency_id" string="Currency"/>
                    <field name="purchase_order"/>
                    <field name="invoice_origin" string="Sale Order#"/>
                </xpath>
                <xpath expr="//notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='sale_info_group']/field[@name='invoice_user_id']" position="replace">
                    <field name="invoice_user_id" string="Business Development" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
                </xpath>
                <xpath expr="//notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='sale_info_group']/field[@name='qr_code_method']" position="after">
                    <field name="memo"/>
                </xpath>
                <xpath expr="//label[@for='invoice_payment_term_id']" position="replace">
                    <label for="invoice_payment_term_id" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                </xpath>
                <xpath expr="//label[@for='invoice_payment_term_id']" position="replace">
                    <label for="invoice_payment_term_id"
                                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                </xpath>
                <xpath expr="//form/sheet/div[hasclass('oe_title')]/h1[1]/span" position="replace">
                    <span class="o_form_label" attrs="{'invisible': ['|',('state','=','draft'), ('move_type','!=','out_refund')]}">Customer Credit Note</span>
                    <span class="o_form_label" attrs="{'invisible': ['|',('state','=','draft'), ('move_type','!=','out_invoice')]}">Customer Invoice</span>
                    <!--<label string="Customer Credit Note" attrs="{'invisible': ['|',('state','=','draft'), ('type','!=','out_refund')]}"/>-->
                    <!--<label string="Customer Invoice" attrs="{'invisible': ['|',('state','=','draft'), ('type','!=','out_invoice')]}"/>-->
                </xpath>
                <!--<xpath expr="//form/sheet/h1[@class='mt0']/div[1]" position="replace">
                    <div attrs="{'invisible': [('sequence_number_next_prefix','!=',False)]}">
                            <label for="number" string="Draft Customer Invoice" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_invoice')]}"/>
                            <label for="number" string="Draft Customer Credit Note" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_refund')]}"/>
                            <field name="number" readonly="1" class="oe_inline" attrs="{'invisible': [('state','in',('draft',))]}"/>
                        </div>
                    &lt;!&ndash;<div attrs="{'invisible': [('sequence_number_next_prefix','!=',False)]}">&ndash;&gt;
                        &lt;!&ndash;<label string="Draft Customer Invoice" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_invoice')]}"/>&ndash;&gt;
                        &lt;!&ndash;<label string="Draft Customer Credit Note" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_refund')]}"/>&ndash;&gt;
                        &lt;!&ndash;<field name="number" readonly="1" class="oe_inline" attrs="{'invisible': [('state','in',('draft',))]}"/>&ndash;&gt;
                    &lt;!&ndash;</div>&ndash;&gt;
                </xpath>-->
            </field>
        </record>

        <record id="view_account_invoice_report_search_inherit" model="ir.ui.view">
            <field name="name">account.invoice.report.search</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search"></field>
            <field name="arch" type="xml">
                <search string="Invoices Analysis">
                    <filter string="My Invoices" name="my_invoice" domain="[('invoice_user_id', '=', uid)]"/>
                    <separator/>
                    <field name="invoice_date"/>
                    <filter string="This Year" name="thisyear" domain="['|', ('invoice_date', '=', False), '&amp;',('invoice_date','&lt;=', time.strftime('%%Y-12-31')),('invoice_date','&gt;=',time.strftime('%%Y-01-01')                  )]" help="Journal invoices with period in current year"/>
                    <separator/>
                    <filter name="to_invoice" string="To Invoice" domain="[('state','=','draft')]" help = "Draft Invoices"/>
                    <filter string="Invoiced" name="current" domain="[('state','not in', ('draft','cancel'))]"/>
                    <separator/>
                    <filter string="This Month" name="this_month" domain="[('invoice_date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                    <filter string="Last Month" name="last_month" domain="['&amp;', ('invoice_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('invoice_date', '&lt;',                                 context_today().strftime('%%Y-%%m-01'))]"/>
                    <separator/>
                    <filter string="Customer" name="customer" domain="['|', ('move_type','=','out_invoice'),('move_type','=','out_refund')]"/>
                    <filter string="Vendor" name="supplier" domain="['|', ('move_type','=','in_invoice'),('move_type','=','in_refund')]"/>
                    <separator/>
                    <filter name="invoice" string="Invoice" domain="['|', ('move_type','=','out_invoice'),('move_type','=','in_invoice')]"/>
                    <filter name="customer_credit_note" string="Customer Credit Note" domain="['|', ('move_type','=','out_refund'),('move_type','=','in_refund')]"/>
                    <field name="partner_id" operator="child_of"/>
                    <field name="invoice_user_id" />
                    <field name="product_categ_id" filter_domain="[('product_categ_id', 'child_of', self)]"/>
    <!--                <field name="analytic_account_id"/>-->
                    <group expand="1" string="Group By">
                        <filter string="Partner" name="partner_id" context="{'group_by':'partner_id','residual_visible':True}"/>
                        <filter string="Business Development" name='user' context="{'group_by':'invoice_user_id'}"/>
                        <filter string="Product Category" name="category_product" context="{'group_by':'product_categ_id','residual_invisible':True}"/>
                        <filter name="status" string="Status" context="{'group_by':'state'}"/>
                        <filter name="company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <separator orientation="vertical" />
                        <filter name="invoice_date" string="Date" context="{'group_by':'invoice_date'}"/>
                        <filter name="invoice_date_due" string="Due Month" context="{'group_by':'invoice_date_due:month'}"/>
    <!--                    <filter string="Analytic Account" name="analytic_account_id" context="{'group_by':'analytic_account_id'}" groups="analytic.group_analytic_accounting" />-->
                    </group>
                </search>
            </field>
        </record>


        <record id="invoice_tree_inherited" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="preferred_method"/>
                </xpath>
            </field>
        </record>



        <record id="view_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.invoice.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='invoice_user_id']" position="replace">
                    <field name="invoice_user_id" string="Business Development" domain="[('share','=', False)]"/>
                </xpath>
                <xpath expr="//search/group/filter[@name='salesperson']" position="replace">
                    <filter string="Business Development" name="salesperson" context="{'group_by':'invoice_user_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.move.filter.not_paid.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='open']" position="after">
                    <filter string="Not Paid"
                            name="not_paid"
                            domain="[('state', '=', 'posted'), ('payment_state', 'in', ('not_paid', 'partial'))]"
                    />

                    <filter string="Reversed"
                            name="reversed"
                            domain="[('payment_state', '=', 'reversed'), ('state', '=', 'posted')]"
                    />

                    <filter string="In Payment"
                            name="in_payment"
                            domain="[('state', '=', 'posted'), ('payment_state', '=', 'in_payment')]"
                    />

                    <filter string="Partially Paid"
                            name="partially_paid"
                            domain="[('state', '=', 'posted'), ('payment_state', '=', 'partial')]"
                    />
                </xpath>
            </field>
         </record>

        <record id="view_account_payment_search_custom" model="ir.ui.view">
            <field name="name">account.payment.search.custom</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <filter name="transfers_filter" position="attributes">
                    <attribute name="string">Transfers</attribute>
                </filter>
            </field>
        </record>

        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="context">{"default_move_type": "out_invoice", "search_default_not_paid": 1}</field>
        </record>


         <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='ref']" position="before">
                    <field name="partner_shipping_id"
                           string="Delivery Address"
                           attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))],'readonly': [('state', 'not in', ('draft'))]}"/>
                </xpath>
            </field>
        </record>

         <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit.recipient.bank</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Adding the 'Recipient Bank Account' field to the form -->
                <xpath expr="//group[@name='group2']" position="inside">
                    <field name="partner_bank_id"
                           string="Recipient Bank Account"
                           context="{'default_partner_id': partner_id}"
                           attrs="{'invisible': [('show_partner_bank_account', '=', False)],
                                   'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_payment_search_inherit" model="ir.ui.view">
            <field name="name">account.payment.search.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <filter name="unmatched" position="after">
                    <filter string="Bank Matched" name="matched" domain="[('is_matched', '=', True)]"/>
                </filter>
            </field>
        </record>

        <record id="view_account_supplier_payment_tree" model="ir.ui.view">
            <field name="name">account.supplier.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">

                <!-- Rename "Vendor" column to "Customer" -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Customer</attribute>
                </xpath>

                <!-- Add the "Company" column -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="company_id"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>