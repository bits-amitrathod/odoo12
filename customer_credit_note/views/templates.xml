        <record id="invoice_tree_inherited" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="preferred_method"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_report_search_inherit" model="ir.ui.view">
        <field name="name">account.invoice.report.search</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"></field>
        <field name="arch" type="xml">
            <search string="Invoices Analysis">
                <filter string="My Invoices" name="my_invoice" domain="[('invoice_user_id', '=', uid)]"/>
                <separator/>
                <field name="invoice_date"/>
                <filter string="This Year" name="thisyear" domain="['|', ('invoice_date', '=', False), '&amp;',('invoice_date','&lt;=', time.strftime('%%Y-12-31')),('invoice_date','&gt;=',time.strftime('%%Y-01-01')                  )]" help="Journal invoices with period in current year"/>
                <separator/>
                <filter name="to_invoice" string="To Invoice" domain="[('state','=','draft')]" help = "Draft Invoices"/>
                <filter string="Invoiced" name="current" domain="[('state','not in', ('draft','cancel'))]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('invoice_date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter string="Last Month" name="last_month" domain="['&amp;', ('invoice_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('invoice_date', '&lt;',                                 context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter string="Customer" name="customer" domain="['|', ('move_type','=','out_invoice'),('move_type','=','out_refund')]"/>
                <filter string="Vendor" name="supplier" domain="['|', ('move_type','=','in_invoice'),('move_type','=','in_refund')]"/>
                <separator/>
                <filter name="invoice" string="Invoice" domain="['|', ('move_type','=','out_invoice'),('move_type','=','in_invoice')]"/>
                <filter name="customer_credit_note" string="Customer Credit Note" domain="['|', ('move_type','=','out_refund'),('move_type','=','in_refund')]"/>
                <field name="partner_id" operator="child_of"/>
                <field name="invoice_user_id" />
                <field name="product_categ_id" filter_domain="[('product_categ_id', 'child_of', self)]"/>
                <field name="analytic_account_id"/>
                <group expand="1" string="Group By">
                    <filter string="Partner" name="partner_id" context="{'group_by':'partner_id','residual_visible':True}"/>
                    <filter string="Business Development" name='user' context="{'group_by':'invoice_user_id'}"/>
                    <filter string="Product Category" name="category_product" context="{'group_by':'product_categ_id','residual_invisible':True}"/>
                    <filter name="status" string="Status" context="{'group_by':'state'}"/>
                    <filter name="company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <separator orientation="vertical" />
                    <filter name="invoice_date" string="Date" context="{'group_by':'invoice_date'}"/>
                    <filter name="invoice_date_due" string="Due Month" context="{'group_by':'invoice_date_due:month'}"/>
                    <filter string="Analytic Account" name="analytic_account_id" context="{'group_by':'analytic_account_id'}" groups="analytic.group_analytic_accounting" />
                </group>
            </search>
        </field>
    </record>

    <template id="report_invoice_document_inherited" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']/h2" position="replace">
            <h2>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Customer Invoice</span>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Customer Invoice</span>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.move_type == 'out_refund' and (o.state == 'open' or o.state == 'paid')">Customer Credit Note</span>
                <span t-if="o.move_type == 'out_refund' and o.state == 'draft'">Draft Customer Credit Note</span>
                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                <span t-if="o.move_type == 'in_invoice'">Vendor Bill Payment</span>
                <span t-field="o.name"/>
            </h2>
        </xpath>
        <xpath expr="//div[@class='page']/div[@class='row mt-4 mb-4']" position="inside">
            <div class="col-xs-2" t-if="o.preferred_method">
                <strong>Preferred Invoice Delivery Method:</strong>
                <p t-field="o.preferred_method"/>
            </div>
        </xpath>

        <xpath expr="//table[@class='table table-sm']/t[2]" position="replace">
            <t t-if="print_with_payments">
                <t t-if="o.payment_state != 'invoicing_legacy'">
                    <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                    <t t-foreach="payments_vals" t-as="payment_vals">
                        <tr>
                            <td>
                                 <i class="oe_form_field text-right oe_payment_label">
                                    <t t-if="payment_vals['journal_name'] == 'Customer Invoices'">
                                        <i class="oe_form_field text-right oe_payment_label"> Credit </i>
                                    </t>
                                    Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                                </i>
                            </td>
                            <td class="text-right">
                                <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                    <t t-if="len(payments_vals) > 0">
                        <tr class="border-black">
                            <td><strong>Amount Due</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_residual"/>
                            </td>
                        </tr>
                    </t>
                </t>
            </t>
        </xpath>

    </template>

    </data>
</odoo>