<odoo>
    <data>
         <template id="listing">
           <ul>
             <li t-foreach="objects" t-as="object">
               <a t-attf-href="#{ root }/objects/#{ object.id }">
                 <t t-esc="object.display_name"/>
               </a>
             </li>
           </ul>
         </template>
         <template id="object">
           <h1><t t-esc="object.display_name"/></h1>
           <dl>
             <t t-foreach="object._fields" t-as="field">
               <dt><t t-esc="field"/></dt>
               <dd><t t-esc="object[field]"/></dd>
             </t>
           </dl>
         </template>

        <template id="assets_backend" name="mail assets" inherit_id="mail.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/customer_credit_note/static/src/js/thread.js"></script>
            </xpath>
        </template>

        <record id="invoice_supplier_form_credit_note_label_update" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div" position="replace">
                  <div>
                        <label for="draft_vendor_bill" string="Draft Vendor Bill" attrs="{'invisible': ['|',('state','!=','draft'), ('type','!=','in_invoice')]}"/>
                        <label for="first_number" string="- First Number:" attrs="{'invisible': [('sequence_number_next_prefix','=',False)]}"/>
                        <label for="draft_vendor_credit_note" string="Draft Vendor Credit Note" attrs="{'invisible': ['|',('state','!=','draft'), ('type','!=','in_refund')]}"/>
                        <label for="vendor_bill_payment" string="Vendor Bill Payment" attrs="{'invisible': ['|',('state', '=', 'draft'), ('type','!=','in_invoice')]}"/>
                        <label for="vendor_credit_note" string="Vendor Credit Note" attrs="{'invisible': ['|',('state', '=', 'draft'), ('type','!=','in_refund')]}"/>
                        <h1 class="mt0">
                            <field name="number" class="oe_inline"  attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            <div  attrs="{'invisible': [('sequence_number_next_prefix','=',False)]}">
                                <field name="sequence_number_next_prefix" class="oe_inline"/>
                                <field name="sequence_number_next" class="oe_inline"/>
                            </div>
                        </h1>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="invoice_form_credit_note_label_update" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/label[1]" position="replace">
                    <label string="Customer Credit Note" attrs="{'invisible': ['|',('state','=','draft'), ('type','!=','out_refund')]}"/>
                    <label string="Customer Invoice" attrs="{'invisible': ['|',('state','=','draft'), ('type','!=','out_invoice')]}"/>
                </xpath>
                <xpath expr="//form/sheet/h1[@class='mt0']/div[1]" position="replace">
                    <div attrs="{'invisible': [('sequence_number_next_prefix','!=',False)]}">
                        <label string="Draft Customer Invoice" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_invoice')]}"/>
                        <label string="Draft Customer Credit Note" attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','!=','out_refund')]}"/>
                        <field name="number" readonly="1" class="oe_inline" attrs="{'invisible': [('state','in',('draft',))]}"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="invoice_tree_inherited" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="preferred_method"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_report_search_inherit" model="ir.ui.view">
        <field name="name">account.invoice.report.search</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"></field>
        <field name="arch" type="xml">
            <search string="Invoices Analysis">
                <filter string="My Invoices" name="my_invoice" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <field name="date"/>
                <filter string="This Year" name="thisyear" domain="['|', ('date', '=', False), '&amp;',('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01')                  )]" help="Journal invoices with period in current year"/>
                <separator/>
                <filter name="to_invoice" string="To Invoice" domain="[('state','=','draft')]" help = "Draft Invoices"/>
                <filter string="Invoiced" name="current" domain="[('state','not in', ('draft','cancel'))]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter string="Last Month" name="last_month" domain="['&amp;', ('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date', '&lt;',                                 context_today().strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter string="Customer" name="customer" domain="['|', ('type','=','out_invoice'),('type','=','out_refund')]"/>
                <filter string="Vendor" name="supplier" domain="['|', ('type','=','in_invoice'),('type','=','in_refund')]"/>
                <separator/>
                <filter name="invoice" string="Invoice" domain="['|', ('type','=','out_invoice'),('type','=','in_invoice')]"/>
                <filter name="customer_credit_note" string="Customer Credit Note" domain="['|', ('type','=','out_refund'),('type','=','in_refund')]"/>
                <field name="partner_id" operator="child_of"/>
                <field name="user_id" />
                <field name="categ_id" filter_domain="[('categ_id', 'child_of', self)]"/>
                <field name="account_analytic_id"/>
                <group expand="1" string="Group By">
                    <filter string="Partner" name="partner_id" context="{'group_by':'partner_id','residual_visible':True}"/>
                    <filter string="Salesperson" name='user' context="{'group_by':'user_id'}"/>
                    <filter string="Product Category" name="category_product" context="{'group_by':'categ_id','residual_invisible':True}"/>
                    <filter name="status" string="Status" context="{'group_by':'state'}"/>
                    <filter name="company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <separator orientation="vertical" />
                    <filter name="date" string="Date" context="{'group_by':'date'}"/>
                    <filter name="due_month" string="Due Month" context="{'group_by':'date_due:month'}"/>
                    <filter string="Analytic Account" name="account_analytic_id" context="{'group_by':'account_analytic_id'}" groups="analytic.group_analytic_accounting" />
                </group>
            </search>
        </field>
    </record>

    <template id="report_invoice_document_inherited" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']/h2" position="replace">
            <h2>
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Customer Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Customer Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.type == 'out_refund' and (o.state == 'open' or o.state == 'paid')">Customer Credit Note</span>
                <span t-if="o.type == 'out_refund' and o.state == 'draft'">Draft Customer Credit Note</span>
                <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                <span t-if="o.type == 'in_invoice'">Vendor Bill Payment</span>
                <span t-field="o.number"/>
            </h2>
        </xpath>
        <xpath expr="//div[@class='page']/div[@class='row mt32 mb32']" position="inside">
            <div class="col-xs-2" t-if="o.preferred_method">
                <strong>Preferred Invoice Delivery Method:</strong>
                <p t-field="o.preferred_method"/>
            </div>
        </xpath>
    </template>

    </data>
</odoo>