<odoo>
    <data>
        <template id="default_acquirer_button">
            <input type="hidden" name="data_set" t-att-data-action-url="tx_url"/>
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <t t-if="return_url">
                <input type="hidden" name="return_url" t-att-value="return_url"/>
            </t>
            <input type="hidden" name="reference" t-att-value="reference"/>
            <input type="hidden" name="amount" t-att-value="amount"/>
            <input type="hidden" name="currency" t-att-value="currency.name"/>
            <input type="hidden" name="txid" t-att-value="tx_id"/>
        </template>


        <record id="payment_acquirer_purchaseorder" model="payment.acquirer">
            <field name="name">Purchase Order</field>
            <field name="view_template_id" ref="default_acquirer_button"/>
            <field name="module_id" ref="base.module_payment_aquirer_cstm"/>
            <field name="journal_id"></field>
            <field name="provider">purchaseorder</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="description" type="html">
                <p>
                    Payment by Purchase Order
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check"/>Online Payment
                    </li>
                </ul>
            </field>
        </record>

        <record id="view_delivery_carrier_form_custom" model="ir.ui.view">
            <field name="name">delivery.carrier.form</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='title']" position="after">
                    <div>
                        <field name="code" readonly="1"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Scheduled Action -->
        <record id="action_delete_old_records" model="ir.cron">
            <field name="name">Delete Old Records</field>
            <field name="model_id" ref="model_product_process_list"/>
            <field name="interval_number">5</field> <!-- Run every 5 minutes -->
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field> <!-- Run indefinitely -->
            <field name="state">code</field>
            <field name="active">False</field>
            <field name="code">model._delete_old_records()</field>
        </record>

    </data>
</odoo>