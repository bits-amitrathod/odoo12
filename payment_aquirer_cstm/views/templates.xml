<odoo>
    <template id="purchase_order_page" name="Purchase order Confirmation">
        <t t-name="website.product_types_page">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty"/>
                <section class="shop-by-manufacturer">
                    <div class="container">
                        <h1 class="header-label">Payment by purchase order</h1>
                    </div>
                    <div class="container">
                        <div class="">
                            <div class="row">
                                <div class="col-md-6">
                                    <form method="post">
                                        <div t-att-class="'form-group has-error' if error else 'form-group'">
                                            <label class="control-label">Purchase Order</label>
                                            <input type="text" name="purchase_order" required="required"
                                                   class="form-control" placeholder="Purchase order"/>
                                            <span t-if="error" class="help-block">
                                                <t t-esc="error"/>
                                            </span>
                                        </div>
                                        <button type="submit" id="po_submit" class="btn btn-default">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </t>
    </template>

    <template id="confirmationCstm" name="confirmation cstm" inherit_id="website_sale.confirmation">
        <xpath expr="//div[hasclass('oe_structure')]" position="before">
            <t t-if="order.client_order_ref">
                <div id="purchaseOrderConfirmation" class="row">
                    <div class="col-xs-12 col-sm-6">
                        <strong>Purchase Order #:</strong>
                        <t t-esc="order.client_order_ref"/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <!--Report-->
    <template id="report_shop_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']/div[1]/strong" position="replace">
            <strong>Purchase Order #:</strong>
        </xpath>
    </template>

    <template id="payment_delivery_methods_inherit" inherit_id="website_sale_delivery.payment_delivery_methods">
        <xpath expr="//input[@t-att-value='delivery.id']" position="replace">
<!--            <script type="text/javascript" src="/payment_aquirer_cstm/static/src/js/script.js"></script>-->
            <input t-att-value="delivery.id" t-att-id="'%s' % delivery.code" type="radio" name="delivery_type" t-att-class="'d-none' if delivery_nb == 1 else ''"/>
        </xpath>
    </template>


    <template id="payment_delivery_shipping_method_inherit" name="SPS Delivery Shipping method Inherit" inherit_id="website_sale_delivery.payment_delivery_shipping_method">
        <xpath expr="//div[@id='delivery_carrier']" position="replace">
            <div t-if="delivery_nb == 1 and deliveries[0].code != 'my_shipper_account'"  id="delivery_carrier"  class="mt4">
                <b>Shipping Method: </b>
                <t t-foreach="deliveries" t-as="delivery">
                    <div class="o_delivery_carrier_select d-inline">
                        <t t-call="website_sale_delivery.payment_delivery_methods"/>
                    </div>
                </t>
            </div>
        </xpath>
    </template>




    <template id="payment_sale_note" inherit_id="website_sale.payment" name="Payment Sale Note Purchase Order">
        <xpath expr="//div[@id='address_on_payment']" position="after">
<!--            <script type="text/javascript" src="/payment_aquirer_cstm/static/src/js/script.js"></script>-->
            <div class="col-sm-12 col-md-12 p-0" >
                <textarea style="margin-bottom: 0px;margin-top: 10px;" rows="3" name="sales_team_message"
                          placeholder="Please specify additional comments or specific instructions for this order." class="form-control"/>
            </div>
            <div id="shipping_options" class="d-flex mt-3 ml-2" t-if="deliveries">
                <div class="radio-inline mr16">
                    <input type="radio" id="my_shipper_account_radio" name="shipping_method_selection" value="my_shipper_account"/>
                    <label for="my_shipper_account_radio" class="regular-font" style="font-size: 21px;">My Shipper Account</label>
                </div>
                  <div class="radio-inline">
                        <input type="radio" id="charge_me_for_shipping_radio" name="shipping_method_selection" value="charge_me_for_shipping"/>
                        <label for="charge_me_for_shipping_radio" class="regular-font" style="font-size: 21px;">Charge Me For Shipping</label>
                  </div>
            </div>
            <div class="col-sm-12 col-md-12 p-0"  t-if="showShippingNote">
                <input type="hidden" value="" id="freeShipingLabel"  t-att-value="freeShipingLabel" />
                <div class="well" id="expedited_shipping_div" style="margin-bottom: 0px;margin-top: 10px;">
                    <b class="modal-title bold-font f16 mb-2" >Expedited Shipping:</b>
                    <p class="regular-font f16">
                        Your Order will be shipped Ground unless otherwise stated. If expedited shipping is needed,
                        Please indicate below:
                        (First Overnight by 8:30AM / Priority Overnight by 10:30AM /2nd day AM by 10:30 AM /2nd Day
                        /3rd Day)
                    </p>
                    <b class="mb-3 bold-font f16">Select a Delivery Method:</b>
                    <select class="form-control" id="selectDeliveryMethod" style="font-family: 'robotolight';font-size: 16px;">
                        <option value="Ground" selected="true">Ground</option>
                        <option value="First Overnight (U.S.) (by 8:30 a.m. next business day)">First Overnight (U.S.) (by 8:30 a.m. next business day)</option>
                        <option value="Priority Overnight (U.S.) (by 10:30 a.m. next business day)">Priority Overnight (U.S.) (by 10:30 a.m. next business day)</option>
                        <option value="Standard Overnight (U.S.) (by 3 p.m. next business day)">Standard Overnight (U.S.) (by 3 p.m. next business day)</option>
                        <option value="2nd Day a.m. (U.S.) (by 10:30 a.m. or noon second business day)">2nd Day a.m. (U.S.) (by 10:30 a.m. or noon second business day)</option>
                        <option value="2nd Day p.m. (U.S.) (by 4:30 p.m. second business day)">2nd Day p.m. (U.S.) (by 4:30 p.m. second business day)</option>
                        <option value="Express Saver (U.S.) (by 4:30 p.m. third business day)">Express Saver (U.S.) (by 4:30 p.m. third business day)</option>
                    </select>
                </div>
            </div>
        </xpath>

         <xpath expr="//div[@id='delivery_carrier']/h3" position="replace">
            <h3 id="choose_a_delivery_method_label" t-if="delivery_nb &gt; 1" class="mb24" style="font-size: 20px;">Choose a delivery method</h3>
        </xpath>
        <xpath expr="//div[@id='delivery_carrier']/div[@id='delivery_method']" position="replace">
            <div id="delivery_method_custom" t-if="delivery_nb &gt; 1" class="card border-0">
                <ul class="list-group">
                    <t t-foreach="deliveries" t-as="delivery">
                        <t t-if="delivery.code !='my_shipper_account'">
                            <li class="list-group-item o_delivery_carrier_select" >
                                <t t-call="website_sale_delivery.payment_delivery_methods"/>
                            </li>
                        </t>
                    </t>
                </ul>
            </div>
        </xpath>
    </template>

    <template id="payment_cstm" inherit_id="website_sale.payment">
        <xpath expr="//div[hasclass('oe_website_sale')]" position="before">
            <t t-call="website_sales.loader_in_stock"/>
        </xpath>
        <xpath expr="//div[@id='wrap']" position="attributes">
            <attribute name="style"> position:relative; </attribute>
        </xpath>
        <xpath expr="//div[@id='payment_method']/h3[@class='mb24']" position="replace">
            <h3 class="mb24" style="font-size: 20px;">Pay with</h3>
        </xpath>
    </template>


</odoo>